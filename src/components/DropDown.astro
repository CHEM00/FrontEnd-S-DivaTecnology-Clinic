---
interface Props {
  id: string;
  label?: string;
}

const { id, label = "Acciones" } = Astro.props;
---

<div class="relative inline-block text-left dropdown-container">
  <button
    id={`btn-${id}`}
    data-dropdown-id={id}
    type="button"
    class="inline-flex w-full justify-center gap-x-1.5 rounded-lg glass-input px-3 py-2 text-sm font-semibold text-gray-700 hover:bg-white/60 shadow-sm ring-1 ring-inset ring-gray-300/50"
    aria-expanded="false"
    aria-haspopup="true"
  >
    {label}
    <svg
      class="-mr-1 h-5 w-5 text-gray-500"
      viewBox="0 0 20 20"
      fill="currentColor"
      aria-hidden="true"
    >
      <path
        fill-rule="evenodd"
        d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
        clip-rule="evenodd"></path>
    </svg>
  </button>

  <div
    id={`menu-${id}`}
    class="absolute right-0 z-20 mt-2 w-40 origin-top-right rounded-xl glass-panel shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none hidden transform opacity-0 scale-95 transition-all duration-200 ease-out overflow-hidden"
    role="menu"
    aria-orientation="vertical"
    aria-labelledby={`btn-${id}`}
    tabindex="-1"
  >
    <div class="py-1" role="none">
      <slot />
    </div>
  </div>
</div>

<script>
  function setupDropdowns() {
    const buttons = document.querySelectorAll("[data-dropdown-id]");

    buttons.forEach((btn) => {
      // Remove old listeners to prevent duplicates if re-run
      const newBtn = btn.cloneNode(true);
      btn.parentNode.replaceChild(newBtn, btn);

      newBtn.addEventListener("click", (e) => {
        e.stopPropagation();
        const id = newBtn.getAttribute("data-dropdown-id");
        const menu = document.getElementById(`menu-${id}`);

        // Close all other dropdowns
        document.querySelectorAll('[id^="menu-"]').forEach((m) => {
          if (m.id !== `menu-${id}`) {
            m.classList.add("hidden", "opacity-0", "scale-95");
            m.classList.remove("opacity-100", "scale-100");
          }
        });

        // Toggle current
        if (menu.classList.contains("hidden")) {
          menu.classList.remove("hidden");
          // Small delay to allow transition
          requestAnimationFrame(() => {
            menu.classList.remove("opacity-0", "scale-95");
            menu.classList.add("opacity-100", "scale-100");
          });
        } else {
          menu.classList.remove("opacity-100", "scale-100");
          menu.classList.add("opacity-0", "scale-95");
          setTimeout(() => {
            menu.classList.add("hidden");
          }, 100);
        }
      });
    });

    // Close on click outside
    document.addEventListener("click", () => {
      document.querySelectorAll('[id^="menu-"]').forEach((m) => {
        m.classList.remove("opacity-100", "scale-100");
        m.classList.add("opacity-0", "scale-95");
        setTimeout(() => {
          m.classList.add("hidden");
        }, 100);
      });
    });
  }

  // Run on load and after Astro swaps (if using ViewTransitions)
  setupDropdowns();
  document.addEventListener("astro:page-load", setupDropdowns);
</script>
