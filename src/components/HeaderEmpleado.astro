---
// src/components/HeaderEmpleado.astro
const { titulo = "Dashboard Empleado", nombreUsuario = "EMPLEADO" } =
    Astro.props;
---

<header
    class="bg-white/30 backdrop-blur-md border-b border-white/20 shadow-sm transition-all duration-300 z-30 relative"
>
    <div class="flex items-center justify-between px-6 py-4">
        <div class="flex items-center gap-3">
            <div
                class="w-10 h-10 rounded-xl bg-[#2F5D50]/10 flex items-center justify-center text-[#2F5D50] shadow-sm"
            >
                <i class="fa-solid fa-calendar-days text-xl"></i>
            </div>
            <h1 class="text-2xl font-bold text-[#2F5D50] tracking-tight">
                {titulo}
            </h1>
        </div>
        <div class="flex items-center gap-4">
            <div class="flex flex-col items-end hidden sm:flex">
                <span class="text-xs text-gray-500 font-medium">Bienvenido</span
                >
                <span class="text-sm font-bold text-[#2F5D50]"
                    >{nombreUsuario}</span
                >
            </div>
            <div class="h-8 w-[1px] bg-[#2F5D50]/20 mx-2 hidden sm:block"></div>
            <button
                onclick="logout()"
                class="glass-button px-4 py-2 rounded-xl text-[#2F5D50] hover:bg-[#2F5D50] hover:text-white transition-all text-sm font-medium flex items-center gap-2 border border-[#2F5D50]/20"
            >
                <i class="fa-solid fa-right-from-bracket"></i>
                <span class="hidden sm:inline">Cerrar Sesi√≥n</span>
            </button>
        </div>
    </div>
</header>

<script>
    // @ts-nocheck
    window.logout = function () {
        localStorage.removeItem("token");
        localStorage.removeItem("userRole");
        window.location.href = "/";
    };
</script>
