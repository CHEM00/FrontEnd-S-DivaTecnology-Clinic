---
interface Props {
    titulo?: string;
    nombreUsuario?: string;
}

const { titulo = "Panel", nombreUsuario = "Usuario" } = Astro.props;
---

<div
    class="w-full h-auto min-h-[5rem] glass-panel flex flex-col sm:flex-row items-center justify-between px-6 py-4 gap-4 rounded-b-3xl mb-8 border-t-0 shadow-lg z-20 relative"
>
    <div class="flex flex-col sm:flex-row items-center gap-4 w-full sm:w-auto">
        <div
            class="w-10 h-10 rounded-xl bg-[#2F5D50]/10 flex items-center justify-center text-[#2F5D50] shadow-sm"
        >
            <i class="fa-solid fa-layer-group text-xl"></i>
        </div>
        <h1
            class="font-sans text-2xl text-[#2F5D50] font-bold text-center sm:text-left tracking-tight"
        >
            {titulo}
        </h1>
        <div class="hidden sm:block h-8 w-[1px] bg-[#2F5D50]/20"></div>
        <div class="flex flex-col">
            <span class="text-xs text-gray-500 font-medium">Bienvenido</span>
            <span class="text-sm font-bold text-[#2F5D50]">{nombreUsuario}</span
            >
        </div>
    </div>

    <div
        class="flex items-center gap-4 w-full sm:w-auto justify-center sm:justify-end"
    >
        <slot />
    </div>
</div>
