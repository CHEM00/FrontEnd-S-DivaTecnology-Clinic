                "historyOverlay",
            ) as HTMLDivElement | null;
            const closeHistoryBtn = document.getElementById(
                "closeHistoryBtn",
            ) as HTMLButtonElement | null;
            const historyList = document.getElementById(
                "historyList",
            ) as HTMLDivElement | null;

            if (
                historyBtn &&
                historyOverlay &&
                closeHistoryBtn &&
                historyList
            ) {
                historyBtn.addEventListener("click", () => {
                    if (!currentAppointment) return;
                    historyOverlay.classList.remove("hidden");
                    loadHistory(currentAppointment.idpatient);
                });

                closeHistoryBtn.addEventListener("click", () => {
                    historyOverlay.classList.add("hidden");
                });
            }

            async function loadHistory(idpatient: string | number) {
                if (!historyList) return;
                historyList.innerHTML = `
                    <div class="flex flex-col items-center justify-center h-full text-gray-400">
                        <i class="fa-solid fa-circle-notch fa-spin text-2xl mb-2 text-[#2F5D50]"></i>
                        <p>Cargando historial...</p>
                    </div>
                `;

                try {
                    const res = await fetch(
                        `/api/v1/HistorialClinico/${idpatient}`,
                    );
                    if (res.ok) {
                        const history = await res.json();
                        if (Array.isArray(history) && history.length > 0) {
                            historyList.innerHTML = history
                                .map(
                                    (item: any) => `
                                <div class="bg-gray-50 p-3 rounded-xl border border-gray-100 hover:shadow-md transition-shadow group">
                                    <div class="flex justify-between items-start mb-2">
                                        <div class="flex flex-col">
                                             <span class="text-[10px] text-gray-500 uppercase font-bold mb-1">
                                                Cita #${item.numberappointment}
                                            </span>
                                            <h4 class="font-bold text-gray-800 text-sm flex items-center gap-1">
                                                <i class="fa-solid fa-user-doctor text-[#2F5D50] text-xs"></i>
                                                ${item.employedname}
                                            </h4>
                                        </div>
                                        <span class="text-xs font-bold text-[#2F5D50] bg-[#2F5D50]/10 px-2 py-1 rounded-lg">
                                            ${new Date(item.appointment_date).toLocaleDateString()}
                                        </span>
                                    </div>
                                    
                                    <div class="mt-2 pt-2 border-t border-gray-200">
                                        <p class="text-[10px] text-gray-500 font-bold uppercase mb-1 flex items-center gap-1">
                                            <i class="fa-regular fa-clipboard text-xs"></i> Nota Terapéutica
                                        </p>
                                        <p class="text-xs text-gray-700 leading-relaxed font-medium ${!item.therapeutic_copy ? "italic text-gray-400" : ""}">
                                            ${item.therapeutic_copy || "Sin nota registrada"}
                                        </p>
                                    </div>
                                </div>
                            `,
                                )
                                .join("");
                        } else {
                            historyList.innerHTML = `
                                <div class="flex flex-col items-center justify-center h-48 text-gray-400">
                                    <i class="fa-regular fa-folder-open text-3xl mb-2 opacity-50"></i>
                                    <p class="text-sm">No hay historial disponible</p>
                                </div>
                            `;
                        }
                    } else {
                        throw new Error("Error fetching history");
                    }
                } catch (error) {
                    console.error(error);
                    historyList.innerHTML = `
                        <div class="flex flex-col items-center justify-center h-full text-red-300">
                            <i class="fa-solid fa-triangle-exclamation text-3xl mb-2"></i>
                            <p class="text-sm">Error al cargar historial</p>
                        </div>
                    `;
                }
            }
        });
    </script>
</Layout>
