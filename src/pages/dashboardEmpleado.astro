---
export const prerender = false;
import Layout from "../layouts/Layout.astro";
import NavBar from "../components/NavBar.astro";
import TopTag from "../components/TopTag.astro";
import { jwtVerify } from "jose";
import { generateConsentPDF } from "../utils/ConsentPDFGenerator";

const token = Astro.cookies.get("auth_token")?.value;
// NOTA: En producción, usa variables de entorno
const SECRET_KEY = new TextEncoder().encode("secret_dev_key_change_in_prod");

let currentUser = null;

if (token) {
    try {
        const { payload } = await jwtVerify(token, SECRET_KEY);
        currentUser = payload;
    } catch (error) {
        console.error("Error validando sesión:", error);
        return Astro.redirect("/");
    }
} else {
    return Astro.redirect("/");
}

const userName = currentUser
    ? `${currentUser.firstname} ${currentUser.lastname}`
    : "Empleado";
const userId = currentUser?.id;
---

<Layout title="Dashboard Empleado">
    <div
        class="flex h-[100dvh] overflow-hidden bg-gradient-to-br from-[#F0F4F8] via-[#E6F0EA] to-[#F0F4F8]"
    >
        <NavBar />
        <div class="flex-1 flex flex-col min-w-0 overflow-hidden relative">
            <!-- Background Elements -->
            <div
                class="absolute top-[-10%] right-[-5%] w-96 h-96 bg-[#2F5D50]/10 rounded-full blur-3xl pointer-events-none"
            >
            </div>
            <div
                class="absolute bottom-[-10%] left-[-5%] w-96 h-96 bg-[#2F5D50]/5 rounded-full blur-3xl pointer-events-none"
            >
            </div>

            <TopTag titulo="Mi Agenda" nombreUsuario={userName} />

            <main
                class="flex-1 overflow-y-auto p-4 sm:p-6 lg:p-8 scrollbar-thin scrollbar-thumb-[#2F5D50]/20 scrollbar-track-transparent relative z-10"
            >
                <div class="max-w-5xl mx-auto space-y-6">
                    <!-- Date Filter Card -->
                    <div
                        class="glass-panel rounded-3xl p-6 border border-white/40 shadow-lg flex flex-col sm:flex-row justify-between items-center gap-4"
                    >
                        <div>
                            <h2 class="text-xl font-bold text-[#2F5D50]">
                                Citas Programadas
                            </h2>
                            <p class="text-sm text-gray-500">
                                Selecciona una fecha para ver tu agenda
                            </p>
                        </div>
                        <div class="relative group w-full sm:w-auto">
                            <input
                                type="date"
                                id="dateFilter"
                                class="glass-input w-full sm:w-48 rounded-xl px-4 py-2.5 font-bold text-[#2F5D50] outline-none focus:ring-2 focus:ring-[#2F5D50]/20 transition-all cursor-pointer"
                            />
                            <div
                                class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none text-[#2F5D50]"
                            >
                                <i class="fa-regular fa-calendar"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Appointments Grid -->
                    <div
                        id="appointmentsGrid"
                        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"
                    >
                        <!-- Content injected via JS -->
                        <div
                            class="col-span-full py-12 flex flex-col items-center justify-center text-gray-400"
                        >
                            <i
                                class="fa-solid fa-circle-notch fa-spin text-4xl mb-4 text-[#2F5D50]"
                            ></i>
                            <p>Cargando citas...</p>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Appointment Detail Modal -->
    <div id="appointmentModal" class="fixed inset-0 z-50 hidden">
        <div
            class="fixed inset-0 bg-black/60 backdrop-blur-sm transition-opacity"
            id="modalOverlay"
        >
        </div>
        <div
            class="fixed inset-0 flex items-center justify-center p-4 sm:p-6 overflow-y-auto"
        >
            <div
                class="bg-white rounded-3xl shadow-2xl w-full max-w-lg transform transition-all scale-95 opacity-0 flex flex-col max-h-[90vh]"
                id="modalContent"
            >
                <!-- Modal Header -->
                <div
                    class="p-6 border-b border-gray-100 flex justify-between items-start bg-[#2F5D50]/5"
                >
                    <div>
                        <h3
                            class="text-xl font-bold text-[#2F5D50]"
                            id="modalPatientName"
                        >
                            Nombre del Paciente
                        </h3>
                        <p
                            class="text-sm text-gray-500 flex items-center gap-2 mt-1"
                        >
                            <i class="fa-regular fa-clock"></i>
                            <span id="modalTimeRange">00:00 - 00:00</span>
                        </p>
                    </div>
                    <button
                        id="closeModalBtn"
                        class="w-8 h-8 rounded-full bg-white text-gray-400 hover:text-red-500 hover:bg-red-50 flex items-center justify-center transition-all shadow-sm"
                    >
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                </div>

                <!-- Modal Body -->
                <div class="p-6 overflow-y-auto space-y-6">
                    <!-- Info Cards -->
                    <div class="grid grid-cols-2 gap-4">
                        <div
                            class="bg-blue-50 p-4 rounded-2xl border border-blue-100"
                        >
                            <p
                                class="text-xs text-blue-600 font-bold uppercase mb-1"
                            >
                                Servicio
                            </p>
                            <p
                                class="font-semibold text-gray-800 text-sm"
                                id="modalService"
                            >
                                Valoración
                            </p>
                        </div>
                        <div
                            class="bg-purple-50 p-4 rounded-2xl border border-purple-100"
                        >
                            <p
                                class="text-xs text-purple-600 font-bold uppercase mb-1"
                            >
                                Estado
                            </p>
                            <p
                                class="font-semibold text-gray-800 text-sm capitalize"
                                id="modalStatus"
                            >
                                Pendiente
                            </p>
                        </div>
                    </div>

                    <div
                        class="bg-gray-50 p-4 rounded-2xl border border-gray-100"
                    >
                        <p
                            class="text-xs text-gray-500 font-bold uppercase mb-1"
                        >
                            Motivo de consulta
                        </p>
                        <p class="text-gray-700 text-sm" id="modalReason">
                            Dolor en la espalda baja...
                        </p>
                    </div>

                    <!-- Consent & Signature Section (Document View) -->
                    <div
                        id="consentSection"
                        class="hidden flex flex-col h-full"
                    >
                        <div
                            class="flex justify-between items-center mb-2 px-1"
                        >
                            <h4 class="font-bold text-gray-800 text-sm">
                                Revisión de Documento
                            </h4>
                            <button
                                id="clearSignatureBtn"
                                class="text-xs text-red-500 hover:text-red-700 font-medium underline"
                            >
                                Limpiar firma
                            </button>
                        </div>

                        <!-- Document Container (Scrollable Paper) -->
                        <div
                            class="bg-white border border-gray-200 shadow-inner rounded-sm p-8 overflow-y-auto custom-scrollbar flex-1 text-gray-800 font-serif text-xs leading-relaxed select-none"
                        >
                            <h2
                                class="font-bold text-center text-sm mb-6 uppercase"
                            >
                                Documento de Consentimiento Informado y Términos
                                del Servicio
                            </h2>

                            <p class="mb-4">
                                <strong>CLÍNICA:</strong> JessTherapy<br />
                                <strong>RESPONSABLE SANITARIO:</strong> Fisioterapeuta
                            </p>

                            <h3 class="font-bold mt-4 mb-1">
                                1. DECLARACIÓN DEL PACIENTE
                            </h3>
                            <p class="mb-3 text-justify">
                                Yo, <span
                                    id="docPatientName"
                                    class="font-bold bg-yellow-100 px-1"
                                    >[Nombre Paciente]</span
                                > (en adelante, "el Paciente"), declaro que he solicitado
                                servicios de fisioterapia en JessTherapy. Entiendo
                                que la fisioterapia implica el uso de medios físicos,
                                terapia manual, ejercicio terapéutico y/o agentes
                                electrofísicos.
                            </p>

                            <h3 class="font-bold mt-4 mb-1">
                                2. EXPLICACIÓN DEL PROCEDIMIENTO
                            </h3>
                            <p class="mb-3 text-justify">
                                Se me ha informado que, tras una valoración
                                inicial, se diseñará un plan de tratamiento que
                                puede incluir: movilizaciones, masoterapia,
                                electroterapia, ultrasonido, láser, termoterapia
                                y ejercicio terapéutico.
                            </p>

                            <h3 class="font-bold mt-4 mb-1">
                                3. RIESGOS Y BENEFICIOS
                            </h3>
                            <p class="mb-3 text-justify">
                                Entiendo los riesgos inherentes (dolor muscular
                                temporal, hematomas leves, irritación cutánea) y
                                los beneficios esperados (mejora funcional,
                                disminución del dolor).
                            </p>

                            <h3 class="font-bold mt-4 mb-1">
                                4. REVOCACIÓN Y DERECHOS
                            </h3>
                            <p class="mb-3 text-justify">
                                Entiendo que puedo revocar este consentimiento
                                médico en cualquier momento, deteniendo el
                                tratamiento clínico sin que ello afecte a mi
                                atención futura.
                            </p>

                            <h3 class="font-bold mt-4 mb-1">
                                5. PROTECCIÓN DE DATOS
                            </h3>
                            <p class="mb-3 text-justify">
                                Autorizo el tratamiento de mis datos personales
                                y de salud con fines asistenciales y
                                administrativos conforme a la ley vigente.
                            </p>

                            <h3 class="font-bold mt-4 mb-1">
                                6. CLÁUSULA DE PAQUETES Y CANCELACIÓN
                            </h3>
                            <p class="mb-3 text-justify">
                                <strong>A) Intransferibilidad:</strong> Los paquetes
                                son personales e intransferibles.<br />
                                <strong>B) No Reembolso:</strong> No se realizarán
                                reembolsos por abandono de tratamiento.
                            </p>

                            <h3 class="font-bold mt-4 mb-1">
                                7. VERACIDAD Y VALIDEZ DE FIRMA
                            </h3>
                            <p class="mb-6 text-justify">
                                Declaro que la información de mi historia
                                clínica es verdadera. Acepto firmar este
                                documento mediante medios electrónicos,
                                reconociendo su plena validez legal.
                            </p>

                            <!-- Embedded Signature Area -->
                            <div
                                class="mt-8 pt-6 border-t-2 border-gray-800 break-inside-avoid"
                            >
                                <p class="text-center font-bold mb-4">
                                    CONFIRMACIÓN Y ACEPTACIÓN
                                </p>

                                <div class="mb-4">
                                    <label class="block font-bold mb-1"
                                        >Firma del Paciente:</label
                                    >
                                    <div
                                        class="border border-gray-400 h-32 relative bg-gray-50 touch-none"
                                    >
                                        <canvas
                                            id="signatureCanvas"
                                            class="w-full h-full cursor-crosshair"
                                        ></canvas>
                                        <div
                                            id="signaturePlaceholder"
                                            class="absolute inset-0 flex items-center justify-center pointer-events-none text-gray-400 italic"
                                        >
                                            Firmar aquí
                                        </div>
                                    </div>
                                </div>

                                <div class="flex items-center gap-2">
                                    <label
                                        for="patientInitials"
                                        class="font-bold">Iniciales:</label
                                    >
                                    <input
                                        type="text"
                                        id="patientInitials"
                                        class="border-b border-gray-400 outline-none px-2 py-1 font-mono uppercase w-24 bg-transparent focus:border-black transition-colors"
                                        maxlength="4"
                                        placeholder="A.B.C"
                                    />
                                </div>
                                <p class="text-[10px] text-gray-500 mt-2">
                                    Fecha: <span id="docDate"></span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Mini PDF Preview (Initially Hidden) -->
                    <div
                        id="pdfPreview"
                        class="hidden bg-gray-50 border border-gray-200 rounded-xl p-4 flex items-center gap-4 mb-4"
                    >
                        <div
                            class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center text-red-500"
                        >
                            <i class="fa-solid fa-file-pdf text-xl"></i>
                        </div>
                        <div class="flex-1">
                            <p class="text-sm font-bold text-gray-800">
                                Consentimiento Firmado
                            </p>
                            <p class="text-xs text-gray-500">
                                Documento generado correctamente
                            </p>
                        </div>
                        <div
                            class="w-6 h-6 rounded-full bg-green-100 flex items-center justify-center text-green-600"
                        >
                            <i class="fa-solid fa-check text-xs"></i>
                        </div>
                    </div>

                    <!-- Consultation Fields (Initially Hidden) -->
                    <div id="consultationFields" class="space-y-4 hidden">
                        <div
                            class="bg-yellow-50 p-4 rounded-2xl border border-yellow-100"
                        >
                            <label
                                class="block text-xs font-bold text-yellow-700 uppercase mb-2"
                                >Diagnóstico</label
                            >
                            <input
                                type="text"
                                id="consultationDiagnosis"
                                class="w-full bg-white border border-yellow-200 rounded-xl px-3 py-2 text-sm focus:ring-2 focus:ring-yellow-500/20 outline-none"
                                placeholder="Diagnóstico del paciente..."
                            />
                        </div>
                        <div
                            class="bg-green-50 p-4 rounded-2xl border border-green-100"
                        >
                            <label
                                class="block text-xs font-bold text-green-700 uppercase mb-2"
                                >Nota Terapéutica</label
                            >
                            <textarea
                                id="consultationNote"
                                rows="4"
                                class="w-full bg-white border border-green-200 rounded-xl px-3 py-2 text-sm focus:ring-2 focus:ring-green-500/20 outline-none"
                                placeholder="Evolución, tratamiento aplicado..."
                            ></textarea>
                        </div>

                        <!-- Additionals Section -->
                        <div
                            class="bg-indigo-50 p-4 rounded-2xl border border-indigo-100"
                        >
                            <label
                                class="block text-xs font-bold text-indigo-700 uppercase mb-2"
                                >Adicionales</label
                            >
                            <div
                                id="additionalsContainer"
                                class="space-y-2 max-h-40 overflow-y-auto custom-scrollbar"
                            >
                                <!-- Injected via JS -->
                                <p class="text-xs text-gray-400 italic">
                                    Cargando adicionales...
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal Footer -->
                <div
                    class="p-6 border-t border-gray-100 bg-gray-50 rounded-b-3xl"
                >
                    <button
                        id="startConsultationBtn"
                        class="w-full py-3.5 rounded-xl bg-[#2F5D50] text-white font-bold shadow-lg shadow-[#2F5D50]/30 hover:bg-[#234D20] active:scale-[0.98] transition-all disabled:opacity-50 disabled:cursor-not-allowed disabled:shadow-none flex items-center justify-center gap-2"
                    >
                        <i class="fa-solid fa-file-signature"></i>
                        <span>Firmar e Iniciar</span>
                    </button>
                    <button
                        id="confirmSignatureBtn"
                        class="w-full py-3.5 rounded-xl bg-[#2F5D50] text-white font-bold shadow-lg shadow-[#2F5D50]/30 hover:bg-[#234D20] active:scale-[0.98] transition-all hidden flex items-center justify-center gap-2"
                    >
                        <i class="fa-solid fa-check"></i>
                        <span>Confirmar Firma</span>
                    </button>
                    <button
                        id="finishConsultationBtn"
                        class="w-full py-3.5 rounded-xl bg-blue-600 text-white font-bold shadow-lg shadow-blue-600/30 hover:bg-blue-700 active:scale-[0.98] transition-all hidden flex items-center justify-center gap-2"
                    >
                        <i class="fa-solid fa-clipboard-check"></i>
                        <span>Finalizar Consulta</span>
                    </button>
                    <p
                        id="timeValidationError"
                        class="text-xs text-red-500 text-center mt-2 hidden font-medium"
                    >
                        Solo puedes iniciar la consulta entre <span
                            id="allowedTimeRange"></span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Data for Client Script -->
    <div
        id="dashboard-data"
        data-user-id={userId}
        data-user-name={userName}
        class="hidden"
    >
    </div>

    <script>
        import { generateConsentPDF } from "../utils/ConsentPDFGenerator";

        interface Appointment {
            id: string;
            status: string;
            nombre_paciente: string;
            inithour: string;
            endhour: string;
            servicio: string;
            reason: string;
            currentday: string;
            idpatient: string; // Added this as it was missing in interface but used
            [key: string]: any;
        }

        interface Additional {
            id: string;
            name: string;
            description: string;
            value: string;
        }

        document.addEventListener("DOMContentLoaded", () => {
            const dataEl = document.getElementById("dashboard-data");
            if (!dataEl) return;
            const userId = dataEl.dataset.userId;
            const userName = dataEl.dataset.userName;

            const dateInput = document.getElementById(
                "dateFilter",
            ) as HTMLInputElement;
            const grid = document.getElementById(
                "appointmentsGrid",
            ) as HTMLElement;

            // Modal Elements
            const modal = document.getElementById(
                "appointmentModal",
            ) as HTMLElement;
            const modalContent = document.getElementById(
                "modalContent",
            ) as HTMLElement;
            const modalOverlay = document.getElementById(
                "modalOverlay",
            ) as HTMLElement;
            const closeModalBtn = document.getElementById(
                "closeModalBtn",
            ) as HTMLElement;

            const startBtn = document.getElementById(
                "startConsultationBtn",
            ) as HTMLButtonElement;
            const confirmSignBtn = document.getElementById(
                "confirmSignatureBtn",
            ) as HTMLElement;
            const finishBtn = document.getElementById(
                "finishConsultationBtn",
            ) as HTMLButtonElement;
            const consentSection = document.getElementById(
                "consentSection",
            ) as HTMLElement;
            const consultationFields = document.getElementById(
                "consultationFields",
            ) as HTMLElement;
            const initialsInput = document.getElementById(
                "patientInitials",
            ) as HTMLInputElement;
            const errorMsg = document.getElementById(
                "timeValidationError",
            ) as HTMLElement;

            // PDF Preview Element
            const pdfPreview = document.getElementById(
                "pdfPreview",
            ) as HTMLElement;

            // Canvas Elements
            const canvas = document.getElementById(
                "signatureCanvas",
            ) as HTMLCanvasElement;
            const clearBtn = document.getElementById(
                "clearSignatureBtn",
            ) as HTMLElement;
            const placeholder = document.getElementById(
                "signaturePlaceholder",
            ) as HTMLElement;
            let ctx: CanvasRenderingContext2D | null = null;
            let isDrawing = false;
            let currentAppointment: Appointment | null = null;
            let currentPdfBlob: Blob | null = null;

            // Check for required elements
            if (
                !modal ||
                !modalContent ||
                !modalOverlay ||
                !closeModalBtn ||
                !startBtn ||
                !confirmSignBtn ||
                !finishBtn ||
                !consentSection ||
                !consultationFields ||
                !initialsInput ||
                !errorMsg ||
                !pdfPreview ||
                !canvas ||
                !clearBtn ||
                !placeholder
            ) {
                console.error("Required elements not found");
                return;
            }

            // Initialize Date to Today
            const today = new Date();
            const localDate = today.toLocaleDateString("en-CA"); // YYYY-MM-DD format
            dateInput.value = localDate;

            // Initial Fetch
            fetchAppointments(localDate);

            // Date Change Listener
            dateInput.addEventListener("change", (e) => {
                const target = e.target as HTMLInputElement;
                fetchAppointments(target.value);
            });

            // --- Fetch Logic ---
            async function fetchAppointments(date: string) {
                if (!grid) return;
                if (!userId) {
                    grid.innerHTML = `
                        <div class="col-span-full py-12 flex flex-col items-center justify-center text-red-400">
                            <i class="fa-solid fa-triangle-exclamation text-4xl mb-4"></i>
                            <p>Error de sesión: No se encontró el ID del usuario.</p>
                            <p class="text-sm mt-2">Por favor, cierra sesión e intenta de nuevo.</p>
                        </div>
                    `;
                    return;
                }

                grid.innerHTML = `
                    <div class="col-span-full py-12 flex flex-col items-center justify-center text-gray-400">
                        <i class="fa-solid fa-circle-notch fa-spin text-4xl mb-4 text-[#2F5D50]"></i>
                        <p>Cargando citas...</p>
                    </div>
                `;

                try {
                    const res = await fetch(
                        `/api/v1/DashboardEmpleado/${userId}?date=${date}`,
                    );
                    if (!res.ok) throw new Error("Error fetching appointments");
                    const data = await res.json();
                    renderAppointments(data);
                } catch (error) {
                    console.error(error);
                    grid.innerHTML = `
                        <div class="col-span-full py-12 flex flex-col items-center justify-center text-red-400">
                            <i class="fa-solid fa-triangle-exclamation text-4xl mb-4"></i>
                            <p>Error al cargar las citas</p>
                        </div>
                    `;
                }
            }

            function renderAppointments(appointments: Appointment[]) {
                if (!grid) return;
                if (!appointments || appointments.length === 0) {
                    grid.innerHTML = `
                        <div class="col-span-full py-12 flex flex-col items-center justify-center text-gray-400">
                            <i class="fa-regular fa-calendar-xmark text-5xl mb-4 opacity-50"></i>
                            <p class="text-lg">No tienes citas para este día</p>
                        </div>
                    `;
                    return;
                }

                grid.innerHTML = "";
                appointments.forEach((app) => {
                    const card = createAppointmentCard(app);
                    grid.appendChild(card);
                });
            }

            function createAppointmentCard(app: Appointment) {
                const div = document.createElement("div");
                div.className =
                    "bg-white/80 backdrop-blur-sm rounded-3xl p-5 border border-white/60 shadow-sm hover:shadow-xl transition-all hover:-translate-y-1 cursor-pointer group relative overflow-hidden";

                // Status Color Logic
                const statusColors: Record<string, string> = {
                    concluded: "green",
                    confirmed: "blue",
                    canceled: "red",
                    pending: "yellow",
                };
                const color = statusColors[app.status?.toLowerCase()] || "gray";

                div.innerHTML = `
                    <div class="absolute left-0 top-0 bottom-0 w-1.5 bg-${color}-500"></div>
                    <div class="flex justify-between items-start mb-4 pl-3">
                        <div class="flex flex-col">
                            <span class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-1">Paciente</span>
                            <h3 class="font-bold text-gray-800 text-lg leading-tight group-hover:text-[#2F5D50] transition-colors">
                                ${app.nombre_paciente || "Desconocido"}
                            </h3>
                        </div>
                        <div class="flex flex-col items-end">
                             <span class="bg-[#2F5D50]/10 text-[#2F5D50] text-xs font-bold px-2.5 py-1 rounded-lg flex items-center gap-1">
                                <i class="fa-regular fa-clock"></i>
                                ${app.inithour?.substring(0, 5)}
                            </span>
                        </div>
                    </div>
                    
                    <div class="pl-3 space-y-2">
                        <div class="flex items-center gap-2 text-sm text-gray-600">
                            <div class="w-6 h-6 rounded-full bg-blue-50 flex items-center justify-center text-blue-500">
                                <i class="fa-solid fa-user-doctor text-xs"></i>
                            </div>
                            <span class="font-medium">${app.servicio || "Consulta General"}</span>
                        </div>
                        <div class="flex items-center gap-2 text-sm text-gray-500">
                            <div class="w-6 h-6 rounded-full bg-gray-100 flex items-center justify-center text-gray-400">
                                <i class="fa-solid fa-align-left text-xs"></i>
                            </div>
                            <span class="truncate max-w-[200px]">${app.reason || "Sin motivo especificado"}</span>
                        </div>
                    </div>

                    <div class="mt-4 pt-3 border-t border-gray-100 pl-3 flex justify-between items-center">
                        <span class="text-xs font-bold px-2 py-0.5 rounded-full bg-${color}-100 text-${color}-700 capitalize">
                            ${app.status}
                        </span>
                        <span class="text-[#2F5D50] text-xs font-bold group-hover:underline">Ver detalles <i class="fa-solid fa-arrow-right ml-1"></i></span>
                    </div>
                `;

                div.addEventListener("click", () => openModal(app));
                return div;
            }

            function closeModal() {
                modalContent.classList.remove("scale-100", "opacity-100");
                modalContent.classList.add("scale-95", "opacity-0");
                setTimeout(() => {
                    modal.classList.add("hidden");
                    currentAppointment = null;
                }, 300);
            }

            closeModalBtn.addEventListener("click", closeModal);
            modalOverlay.addEventListener("click", closeModal);

            // --- Time Validation Logic ---
            function validateTime(app: Appointment) {
                const startBtnSpan = startBtn.querySelector("span");

                // Check if already concluded
                if (app.status === "concluded") {
                    startBtn.disabled = true;
                    startBtn.classList.add("opacity-50", "cursor-not-allowed");
                    if (startBtnSpan)
                        startBtnSpan.textContent = "Consulta Concluida";
                    errorMsg.classList.add("hidden");
                    return;
                }

                // Reset text for other statuses
                if (startBtnSpan) startBtnSpan.textContent = "Firmar e Iniciar";

                const now = new Date();
                const currentTime = now.getHours() * 60 + now.getMinutes();

                const [startH, startM] = app.inithour.split(":").map(Number);
                const [endH, endM] = app.endhour.split(":").map(Number);

                const startTime = startH * 60 + startM;
                const endTime = endH * 60 + endM;

                const dateStr = app.currentday.split("T")[0]; // YYYY-MM-DD
                const todayStr = new Date().toLocaleDateString("en-CA");

                const isToday = dateStr === todayStr;
                const isWithinTime =
                    currentTime >= startTime && currentTime < endTime;

                if (isToday && isWithinTime) {
                    startBtn.disabled = false;
                    startBtn.classList.remove(
                        "opacity-50",
                        "cursor-not-allowed",
                    );
                    errorMsg.classList.add("hidden");
                } else {
                    startBtn.disabled = true;
                    startBtn.classList.add("opacity-50", "cursor-not-allowed");
                    errorMsg.classList.remove("hidden");
                    document.getElementById("allowedTimeRange")!.textContent =
                        `${app.inithour?.substring(0, 5)} - ${app.endhour?.substring(0, 5)}`;
                }
            }

            startBtn.addEventListener("click", () => {
                if (!startBtn.disabled) {
                    // Show Signature Section
                    startBtn.classList.add("hidden");
                    confirmSignBtn.classList.remove("hidden");
                    consentSection.classList.remove("hidden");

                    // Re-init canvas
                    setTimeout(initCanvas, 50);
                }
            });

            confirmSignBtn.addEventListener("click", async () => {
                if (!currentAppointment) return;
                // Validation
                if (placeholder.classList.contains("hidden") === false) {
                    alert(
                        "Por favor, solicite al paciente que firme el consentimiento.",
                    );
                    return;
                }
                if (!initialsInput.value.trim()) {
                    alert("Por favor, ingrese las iniciales del paciente.");
                    return;
                }

                try {
                    const signatureData = canvas.toDataURL("image/png");
                    const initials = initialsInput.value.trim();

                    // Generate PDF Blob
                    const pdfBytes = await generateConsentPDF(
                        currentAppointment.nombre_paciente,
                        "Fisioterapeuta",
                        signatureData,
                        initials,
                    );

                    currentPdfBlob = new Blob([pdfBytes as any], {
                        type: "application/pdf",
                    });

                    // Switch to Consultation Mode
                    confirmSignBtn.classList.add("hidden");
                    consentSection.classList.add("hidden");

                    // Show Mini PDF Preview
                    pdfPreview.classList.remove("hidden");

                    consultationFields.classList.remove("hidden");
                    finishBtn.classList.remove("hidden");
                } catch (error) {
                    console.error("Error generating PDF:", error);
                    alert(
                        "Hubo un error al procesar la firma. Verifique que sus datos de sesión estén completos.",
                    );
                }
            });

            // --- Additionals Logic ---
            let availableAdditionals: Additional[] = [];
            let selectedAdditionals: string[] = [];

            async function fetchAdditionals() {
                try {
                    const res = await fetch(
                        "/api/v1/Product_Service/additional",
                    );
                    if (!res.ok) throw new Error("Error fetching additionals");
                    availableAdditionals = await res.json();
                    renderAdditionals();
                } catch (error) {
                    console.error("Error loading additionals:", error);
                }
            }

            function renderAdditionals() {
                const container = document.getElementById(
                    "additionalsContainer",
                );
                if (!container) return;

                container.innerHTML = availableAdditionals
                    .map(
                        (item) => `
                    <label class="flex items-center justify-between p-3 bg-white border border-gray-200 rounded-xl cursor-pointer hover:bg-gray-50 transition-colors">
                        <div class="flex items-center gap-3">
                            <input type="checkbox" value="${item.id}" class="w-4 h-4 text-[#2F5D50] rounded focus:ring-[#2F5D50] additional-checkbox">
                            <div>
                                <p class="text-sm font-bold text-gray-800">${item.name}</p>
                                <p class="text-xs text-gray-500">${item.description}</p>
                            </div>
                        </div>
                        <span class="text-sm font-bold text-[#2F5D50]">$${item.value}</span>
                    </label>
                `,
                    )
                    .join("");

                // Add listeners
                container
                    .querySelectorAll(".additional-checkbox")
                    .forEach((cb) => {
                        cb.addEventListener("change", (e) => {
                            const target = e.target as HTMLInputElement;
                            const id = target.value;
                            if (target.checked) {
                                selectedAdditionals.push(id);
                            } else {
                                selectedAdditionals =
                                    selectedAdditionals.filter(
                                        (aid) => aid !== id,
                                    );
                            }
                        });
                    });
            }

            // Call fetch on load
            fetchAdditionals();

            finishBtn.addEventListener("click", async () => {
                if (!currentAppointment) return;

                const diagnosis = (
                    document.getElementById(
                        "consultationDiagnosis",
                    ) as HTMLInputElement
                ).value;
                const note = (
                    document.getElementById(
                        "consultationNote",
                    ) as HTMLTextAreaElement
                ).value;

                if (!note.trim()) {
                    alert("Por favor agregue una nota terapéutica.");
                    return;
                }

                if (!currentPdfBlob) {
                    alert("Error: No se encontró el consentimiento firmado.");
                    return;
                }

                // Disable button to prevent double submit
                finishBtn.innerHTML =
                    '<i class="fa-solid fa-circle-notch fa-spin"></i> Procesando...';

                try {
                    // Step 0: Get Patient Info (Appointment Number)
                    const patientRes = await fetch(
                        `/api/v1/Pacientes/${currentAppointment.idpatient}`,
                    );
                    if (!patientRes.ok)
                        throw new Error("Error fetching patient info");
                    const patientData = await patientRes.json();
                    console.log("Patient Data:", patientData); // Debugging
                    const appointmentNumber = patientData.assispointment || 1;

                    // Step 1: Upload PDF
                    const pdfFormData = new FormData();
                    pdfFormData.append(
                        "pdf",
                        currentPdfBlob,
                        `Consentimiento_${currentAppointment.id}.pdf`,
                    );

                    const pdfRes = await fetch(
                        `/api/v1/Pacientes/${currentAppointment.idpatient}/pdf`,
                        {
                            method: "POST",
                            body: pdfFormData,
                        },
                    );
                    if (!pdfRes.ok) throw new Error("Error uploading PDF");

                    // Step 2: Save Details
                    const detailsBody = {
                        therapeuticnote: note,
                        diagnostic: diagnosis,
                        idappointment: currentAppointment.id,
                    };

                    const detailsRes = await fetch("/api/v1/Citas/detalle", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify(detailsBody),
                    });

                    if (!detailsRes.ok)
                        throw new Error("Error saving consultation details");
                    const detailsData = await detailsRes.json();
                    const idDetail = detailsData.id || detailsData.insertId;

                    // Step 2.5: Save Additionals (New Logic)
                    if (selectedAdditionals.length > 0) {
                        for (const additionalId of selectedAdditionals) {
                            const additionalItem = availableAdditionals.find(
                                (item) => item.id == additionalId,
                            );
                            if (additionalItem) {
                                const additionalBody = {
                                    serviceId: additionalItem.id,
                                    amount: "1",
                                    unit_price: additionalItem.value,
                                };

                                const additionalRes = await fetch(
                                    `/api/v1/Agenda/${currentAppointment.id}/services`,
                                    {
                                        method: "POST",
                                        headers: {
                                            "Content-Type": "application/json",
                                        },
                                        body: JSON.stringify(additionalBody),
                                    },
                                );

                                if (!additionalRes.ok) {
                                    console.error(
                                        `Error saving additional ${additionalItem.name}`,
                                    );
                                }
                            }
                        }
                    }

                    // Step 3: Update Status
                    const statusRes = await fetch(
                        `/api/v1/Citas/${currentAppointment.id}`,
                        {
                            method: "PATCH",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({ status: "concluded" }),
                        },
                    );
                    if (!statusRes.ok)
                        throw new Error("Error updating appointment status");

                    // Step 4: Save History
                    const historyBody = {
                        patientname: currentAppointment.nombre_paciente,
                        employedname: userName, // Using the variable from Astro script
                        diagnostic_copy: diagnosis,
                        therapeutic_copy: note,
                        numberappointment: appointmentNumber.toString(),
                        appointment_date:
                            currentAppointment.currentday.split("T")[0],
                        appointment_time: currentAppointment.inithour,
                        idpatient: currentAppointment.idpatient,
                        idemployed: userId,
                        idappointment: currentAppointment.id,
                        iddetailappointment: idDetail,
                    };

                    const historyRes = await fetch("/api/v1/HistorialClinico", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify(historyBody),
                    });
                    if (!historyRes.ok)
                        throw new Error("Error saving medical history");

                    // Success
                    alert("Consulta finalizada exitosamente.");
                    closeModal();
                    // Recargar citas
                    fetchAppointments(dateInput.value);
                } catch (error: any) {
                    console.error("Error in consultation workflow:", error);
                    alert(`Error al finalizar la consulta: ${error.message}`);
                } finally {
                    finishBtn.disabled = false;
                    finishBtn.innerHTML =
                        '<i class="fa-solid fa-clipboard-check"></i> Finalizar Consulta';
                }
            });

            // --- Canvas Logic ---
            function initCanvas() {
                // Fix canvas resolution for high DPI displays
                if (!canvas.parentElement) return;
                const rect = canvas.parentElement.getBoundingClientRect();
                canvas.width = rect.width;
                canvas.height = rect.height;

                ctx = canvas.getContext("2d");
                if (ctx) {
                    ctx.strokeStyle = "#000";
                    ctx.lineWidth = 2;
                    ctx.lineCap = "round";
                }
            }

            function getPos(e: MouseEvent | TouchEvent) {
                const rect = canvas.getBoundingClientRect();
                const clientX = (e as TouchEvent).touches
                    ? (e as TouchEvent).touches[0].clientX
                    : (e as MouseEvent).clientX;
                const clientY = (e as TouchEvent).touches
                    ? (e as TouchEvent).touches[0].clientY
                    : (e as MouseEvent).clientY;
                return {
                    x: clientX - rect.left,
                    y: clientY - rect.top,
                };
            }

            function startDraw(e: MouseEvent | TouchEvent) {
                if (!ctx) return;
                isDrawing = true;
                const { x, y } = getPos(e);
                ctx.beginPath();
                ctx.moveTo(x, y);
                placeholder.classList.add("hidden");
                e.preventDefault();
            }

            function draw(e: MouseEvent | TouchEvent) {
                if (!isDrawing || !ctx) return;
                const { x, y } = getPos(e);
                ctx.lineTo(x, y);
                ctx.stroke();
                e.preventDefault();
            }

            function stopDraw() {
                isDrawing = false;
            }

            function clearCanvas() {
                if (ctx) ctx.clearRect(0, 0, canvas.width, canvas.height);
                placeholder.classList.remove("hidden");
            }

            // Mouse Events
            canvas.addEventListener("mousedown", startDraw);
            canvas.addEventListener("mousemove", draw);
            canvas.addEventListener("mouseup", stopDraw);
            canvas.addEventListener("mouseleave", stopDraw);

            // Touch Events (Mobile)
            canvas.addEventListener("touchstart", startDraw);
            canvas.addEventListener("touchmove", draw);
            canvas.addEventListener("touchend", stopDraw);

            clearBtn.addEventListener("click", clearCanvas);

            // Handle resize
            window.addEventListener("resize", initCanvas);
        });
    </script>
