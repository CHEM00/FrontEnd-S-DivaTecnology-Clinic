---
export const prerender = false;
import Layout from "../layouts/Layout.astro";
import NavBar from "../components/NavBar.astro";
import TopTag from "../components/TopTag.astro";
import { jwtVerify } from "jose";
import { generateConsentPDF } from "../utils/ConsentPDFGenerator";

const token = Astro.cookies.get("auth_token")?.value;
// NOTA: En producción, usa variables de entorno
const SECRET_KEY = new TextEncoder().encode("secret_dev_key_change_in_prod");

let currentUser = null;

if (token) {
    try {
        const { payload } = await jwtVerify(token, SECRET_KEY);
        currentUser = payload;
    } catch (error) {
        console.error("Error validando sesión:", error);
        return Astro.redirect("/");
    }
} else {
    return Astro.redirect("/");
}

const userName = currentUser
    ? `${currentUser.firstname} ${currentUser.lastname}`
    : "Empleado";
const userId = currentUser?.id;
---

<Layout title="Dashboard Empleado">
    <div
        class="flex h-[100dvh] overflow-hidden bg-gradient-to-br from-[#F0F4F8] via-[#E6F0EA] to-[#F0F4F8]"
    >
        <NavBar />
        <div class="flex-1 flex flex-col min-w-0 overflow-hidden relative">
            <!-- Background Elements -->
            <div
                class="absolute top-[-10%] right-[-5%] w-96 h-96 bg-[#2F5D50]/10 rounded-full blur-3xl pointer-events-none"
            >
            </div>
            <div
                class="absolute bottom-[-10%] left-[-5%] w-96 h-96 bg-[#2F5D50]/5 rounded-full blur-3xl pointer-events-none"
            >
            </div>

            <TopTag titulo="Mi Agenda" nombreUsuario={userName} />

            <main
                class="flex-1 overflow-y-auto p-4 sm:p-6 lg:p-8 scrollbar-thin scrollbar-thumb-[#2F5D50]/20 scrollbar-track-transparent relative z-10"
            >
                <div class="max-w-5xl mx-auto space-y-6">
                    <!-- Date Filter Card -->
                    <div
                        class="glass-panel rounded-3xl p-6 border border-white/40 shadow-lg flex flex-col sm:flex-row justify-between items-center gap-4"
                    >
                        <div>
                            <h2 class="text-xl font-bold text-[#2F5D50]">
                                Citas Programadas
                            </h2>
                            <p class="text-sm text-gray-500">
                                Selecciona una fecha para ver tu agenda
                            </p>
                        </div>
                        <div class="relative group w-full sm:w-auto">
                            <input
                                type="date"
                                id="dateFilter"
                                class="glass-input w-full sm:w-48 rounded-xl px-4 py-2.5 font-bold text-[#2F5D50] outline-none focus:ring-2 focus:ring-[#2F5D50]/20 transition-all cursor-pointer"
                            />
                            <div
                                class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none text-[#2F5D50]"
                            >
                                <i class="fa-regular fa-calendar"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Appointments Grid -->
                    <div
                        id="appointmentsGrid"
                        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"
                    >
                        <!-- Content injected via JS -->
                        <div
                            class="col-span-full py-12 flex flex-col items-center justify-center text-gray-400"
                        >
                            <i
                                class="fa-solid fa-circle-notch fa-spin text-4xl mb-4 text-[#2F5D50]"
                            ></i>
                            <p>Cargando citas...</p>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Appointment Detail Modal -->
    <div id="appointmentModal" class="fixed inset-0 z-50 hidden">
        <div
            class="fixed inset-0 bg-black/60 backdrop-blur-sm transition-opacity"
            id="modalOverlay"
        >
        </div>
        <div
            class="fixed inset-0 flex items-center justify-center p-4 sm:p-6 overflow-y-auto"
        >
            <div
                class="bg-white rounded-3xl shadow-2xl w-full max-w-lg transform transition-all scale-95 opacity-0 flex flex-col max-h-[90vh]"
                id="modalContent"
            >
                <!-- Modal Header -->
                <div
                    class="p-6 border-b border-gray-100 flex justify-between items-start bg-[#2F5D50]/5"
                >
                    <div>
                        <h3
                            class="text-xl font-bold text-[#2F5D50]"
                            id="modalPatientName"
                        >
                            Nombre del Paciente
                        </h3>
                        <p
                            class="text-sm text-gray-500 flex items-center gap-2 mt-1"
                        >
                            <i class="fa-regular fa-clock"></i>
                            <span id="modalTimeRange">00:00 - 00:00</span>
                        </p>
                    </div>
                    <div class="flex items-center gap-2">
                        <button
                            id="historyBtn"
                            class="px-3 py-1.5 rounded-lg bg-[#2F5D50]/10 text-[#2F5D50] text-sm font-bold hover:bg-[#2F5D50] hover:text-white transition-colors flex items-center gap-2"
                        >
                            <i class="fa-solid fa-clock-rotate-left"></i>
                            <span class="hidden sm:inline">Historial</span>
                        </button>
                        <button
                            id="closeModalBtn"
                            class="w-8 h-8 rounded-full bg-white text-gray-400 hover:text-red-500 hover:bg-red-50 flex items-center justify-center transition-all shadow-sm"
                        >
                            <i class="fa-solid fa-xmark"></i>
                        </button>
                    </div>
                </div>

                <!-- Modal Body -->
                <div class="p-6 overflow-y-auto space-y-6">
                    <!-- Info Cards -->
                    <div class="grid grid-cols-2 gap-4">
                        <div
                            class="bg-blue-50 p-4 rounded-2xl border border-blue-100"
                        >
                            <p
                                class="text-xs text-blue-600 font-bold uppercase mb-1"
                            >
                                Servicio
                            </p>
                            <p
                                class="font-semibold text-gray-800 text-sm"
                                id="modalService"
                            >
                                Valoración
                            </p>
                        </div>
                        <div
                            class="bg-purple-50 p-4 rounded-2xl border border-purple-100"
                        >
                            <p
                                class="text-xs text-purple-600 font-bold uppercase mb-1"
                            >
                                Estado
                            </p>
                            <p
                                class="font-semibold text-gray-800 text-sm capitalize"
                                id="modalStatus"
                            >
                                Pendiente
                            </p>
                        </div>
                    </div>

                    <div
                        class="bg-gray-50 p-4 rounded-2xl border border-gray-100"
                    >
                        <p
                            class="text-xs text-gray-500 font-bold uppercase mb-1"
                        >
                            Motivo de consulta
                        </p>
                        <p class="text-gray-700 text-sm" id="modalReason">
                            Dolor en la espalda baja...
                        </p>
                    </div>

                    <!-- Consent & Signature Section (Document View) -->
                    <div
                        id="consentSection"
                        class="hidden flex flex-col h-full"
                    >
                        <div
                            class="flex justify-between items-center mb-2 px-1"
                        >
                            <h4 class="font-bold text-gray-800 text-sm">
                                Revisión de Documento
                            </h4>
                            <button
                                id="clearSignatureBtn"
                                class="text-xs text-red-500 hover:text-red-700 font-medium underline"
                            >
                                Limpiar firma
                            </button>
                        </div>

                        <!-- Document Container (Scrollable Paper) -->
                        <div
                            class="bg-white border border-gray-200 shadow-inner rounded-sm p-8 overflow-y-auto custom-scrollbar flex-1 text-gray-800 font-serif text-xs leading-relaxed select-none"
                        >
                            <h2
                                class="font-bold text-center text-sm mb-6 uppercase"
                            >
                                Documento de Consentimiento Informado y Términos
                                del Servicio
                            </h2>

                            <p class="mb-4">
                                <strong>CLÍNICA:</strong> JessTherapy<br />
                                <strong>RESPONSABLE SANITARIO:</strong>
                                {userName}
                            </p>

                            <h3 class="font-bold mt-4 mb-1">
                                1. DECLARACIÓN DEL PACIENTE
                            </h3>
                            <p class="mb-3 text-justify">
                                Yo, <span
                                    id="docPatientName"
                                    class="font-bold bg-yellow-100 px-1"
                                    >[Nombre Paciente]</span
                                >, declaro que he solicitado servicios de
                                fisioterapia en JessTherapy. Entiendo que la
                                fisioterapia implica el uso de medios físicos,
                                terapia manual, terapia invasiva, ondas de
                                choque, ejercicio terapéutico y/o agentes
                                electrofísicos.
                            </p>

                            <h3 class="font-bold mt-4 mb-1">
                                2. EXPLICACIÓN DEL PROCEDIMIENTO
                            </h3>
                            <p class="mb-3 text-justify">
                                Se me ha informado que, tras una valoración
                                puede incluir: movilizaciones, masoterapia,
                                electroterapia, ultrasonido, láser, terapia
                                invasiva, ondas de choque, termoterapia y
                                ejercicio terapéutico.
                            </p>

                            <h3 class="font-bold mt-4 mb-1">
                                3. RIESGOS Y BENEFICIOS
                            </h3>
                            <p class="mb-3 text-justify">
                                Entiendo los riesgos inherentes (dolor muscular
                                temporal, hematomas leves, irritación cutánea) y
                                los beneficios esperados (mejora funcional,
                                disminución del dolor).
                            </p>

                            <h3 class="font-bold mt-4 mb-1">
                                4. REVOCACIÓN Y DERECHOS
                            </h3>
                            <p class="mb-3 text-justify">
                                Entiendo que puedo revocar este consentimiento
                                médico en cualquier momento, deteniendo el
                                tratamiento clínico sin que ello afecte a mi
                                atención futura.
                            </p>

                            <h3 class="font-bold mt-4 mb-1">
                                5. PROTECCIÓN DE DATOS
                            </h3>
                            <p class="mb-3 text-justify">
                                Autorizo el tratamiento de mis datos personales
                                y de salud con fines asistenciales y
                                administrativos conforme a la ley vigente.
                            </p>

                            <h3 class="font-bold mt-4 mb-1">
                                6. CLÁUSULA DE PAQUETES Y CANCELACIÓN
                            </h3>
                            <p class="mb-3 text-justify">
                                <strong>A) Intransferibilidad:</strong> Los paquetes
                                son personales e intransferibles.<br />
                                <strong>B) No Reembolso:</strong> No se realizarán
                                reembolsos por abandono de tratamiento.<br />
                                <strong>C) Política de Asistencia:</strong> En caso
                                de faltar o no cancelar con 3h de anticipación, se
                                cobrará multa de $150 MXN.<br />
                                <strong>D) Costos Adicionales:</strong> Se informará
                                y pedirá autorización previa para cualquier insumo
                                extra.<br />
                                <strong>E) Duración:</strong> Sesión de 50 min. El
                                retraso reduce el tiempo efectivo, no se extiende
                                la hora.
                            </p>

                            <h3 class="font-bold mt-4 mb-1">
                                7. VERACIDAD Y VALIDEZ DE FIRMA
                            </h3>
                            <p class="mb-6 text-justify">
                                Declaro que la información de mi historia
                                clínica es verdadera. Acepto firmar este
                                documento mediante medios electrónicos,
                                reconociendo su plena validez legal.
                            </p>

                            <!-- Embedded Signature Area -->
                            <div
                                class="mt-8 pt-6 border-t-2 border-gray-800 break-inside-avoid"
                            >
                                <p class="text-center font-bold mb-4">
                                    CONFIRMACIÓN Y ACEPTACIÓN
                                </p>

                                <div class="mb-4">
                                    <label class="block font-bold mb-1"
                                        >Firma del Paciente:</label
                                    >
                                    <div
                                        class="border border-gray-400 h-32 relative bg-gray-50 touch-none"
                                    >
                                        <canvas
                                            id="signatureCanvas"
                                            class="w-full h-full cursor-crosshair"
                                        ></canvas>
                                        <div
                                            id="signaturePlaceholder"
                                            class="absolute inset-0 flex items-center justify-center pointer-events-none text-gray-400 italic"
                                        >
                                            Firmar aquí
                                        </div>
                                    </div>
                                </div>

                                <div class="flex items-center gap-2">
                                    <label
                                        for="patientInitials"
                                        class="font-bold">Iniciales:</label
                                    >
                                    <input
                                        type="text"
                                        id="patientInitials"
                                        class="border-b border-gray-400 outline-none px-2 py-1 font-mono uppercase w-24 bg-transparent focus:border-black transition-colors"
                                        maxlength="4"
                                        placeholder="A.B.C"
                                    />
                                </div>
                                <p class="text-[10px] text-gray-500 mt-2">
                                    Fecha: <span id="docDate"></span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Mini PDF Preview (Initially Hidden) -->
                    <div
                        id="pdfPreview"
                        class="hidden bg-gray-50 border border-gray-200 rounded-xl p-4 flex items-center gap-4 mb-4"
                    >
                        <div
                            class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center text-red-500"
                        >
                            <i class="fa-solid fa-file-pdf text-xl"></i>
                        </div>
                        <div class="flex-1">
                            <p class="text-sm font-bold text-gray-800">
                                Consentimiento Firmado
                            </p>
                            <p class="text-xs text-gray-500">
                                Documento generado correctamente
                            </p>
                        </div>
                        <div
                            class="w-6 h-6 rounded-full bg-green-100 flex items-center justify-center text-green-600"
                        >
                            <i class="fa-solid fa-check text-xs"></i>
                        </div>
                    </div>

                    <!-- Consultation Fields (Initially Hidden) -->
                    <div id="consultationFields" class="space-y-4 hidden">
                        <div
                            class="bg-yellow-50 p-4 rounded-2xl border border-yellow-100"
                        >
                            <label
                                class="block text-xs font-bold text-yellow-700 uppercase mb-2"
                                >Diagnóstico</label
                            >
                            <input
                                type="text"
                                id="consultationDiagnosis"
                                class="w-full bg-white border border-yellow-200 rounded-xl px-3 py-2 text-sm focus:ring-2 focus:ring-yellow-500/20 outline-none"
                                placeholder="Diagnóstico del paciente..."
                            />
                        </div>
                        <div
                            class="bg-green-50 p-4 rounded-2xl border border-green-100"
                        >
                            <label
                                class="block text-xs font-bold text-green-700 uppercase mb-2"
                                >Nota Terapéutica</label
                            >
                            <textarea
                                id="consultationNote"
                                rows="4"
                                class="w-full bg-white border border-green-200 rounded-xl px-3 py-2 text-sm focus:ring-2 focus:ring-green-500/20 outline-none"
                                placeholder="Evolución, tratamiento aplicado..."
                            ></textarea>
                        </div>

                        <!-- Additionals Section -->
                        <div
                            class="bg-indigo-50 p-4 rounded-2xl border border-indigo-100"
                        >
                            <label
                                class="block text-xs font-bold text-indigo-700 uppercase mb-2"
                                >Adicionales</label
                            >
                            <div
                                id="additionalsContainer"
                                class="space-y-2 max-h-40 overflow-y-auto custom-scrollbar"
                            >
                                <!-- Injected via JS -->
                                <p class="text-xs text-gray-400 italic">
                                    Cargando adicionales...
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal Footer -->
                <div
                    class="p-6 border-t border-gray-100 bg-gray-50 rounded-b-3xl"
                >
                    <button
                        id="startConsultationBtn"
                        class="w-full py-3.5 rounded-xl bg-[#2F5D50] text-white font-bold shadow-lg shadow-[#2F5D50]/30 hover:bg-[#234D20] active:scale-[0.98] transition-all disabled:opacity-50 disabled:cursor-not-allowed disabled:shadow-none flex items-center justify-center gap-2"
                    >
                        <i class="fa-solid fa-file-signature"></i>
                        <span>Firmar e Iniciar</span>
                    </button>
                    <button
                        id="confirmSignatureBtn"
                        class="w-full py-3.5 rounded-xl bg-[#2F5D50] text-white font-bold shadow-lg shadow-[#2F5D50]/30 hover:bg-[#234D20] active:scale-[0.98] transition-all hidden flex items-center justify-center gap-2"
                    >
                        <i class="fa-solid fa-check"></i>
                        <span>Confirmar Firma</span>
                    </button>
                    <button
                        id="saveDraftBtn"
                        class="w-full py-3.5 rounded-xl border-2 border-[#2F5D50] text-[#2F5D50] font-bold hover:bg-[#2F5D50]/10 active:scale-[0.98] transition-all hidden flex items-center justify-center gap-2 mb-3"
                    >
                        <i class="fa-regular fa-floppy-disk"></i>
                        <span>Guardar Borrador</span>
                    </button>
                    <button
                        id="finishConsultationBtn"
                        class="w-full py-3.5 rounded-xl bg-blue-600 text-white font-bold shadow-lg shadow-blue-600/30 hover:bg-blue-700 active:scale-[0.98] transition-all hidden flex items-center justify-center gap-2"
                    >
                        <i class="fa-solid fa-clipboard-check"></i>
                        <span>Finalizar Consulta</span>
                    </button>
                    <p
                        id="timeValidationError"
                        class="text-xs text-red-500 text-center mt-2 hidden font-medium"
                    >
                        <!-- Mensaje de validación eliminado -->
                    </p>
                </div>

                <!-- History Overlay -->
                <div
                    id="historyOverlay"
                    class="hidden absolute inset-0 bg-white z-20 flex flex-col animate-fade-in"
                >
                    <div
                        class="p-4 border-b border-gray-100 flex justify-between items-center bg-gray-50"
                    >
                        <h3
                            class="font-bold text-[#2F5D50] flex items-center gap-2"
                        >
                            <i class="fa-solid fa-clock-rotate-left"></i> Historial
                            Clínico
                        </h3>
                        <button
                            id="closeHistoryBtn"
                            class="w-8 h-8 rounded-full bg-white text-gray-400 hover:text-red-500 hover:bg-red-50 flex items-center justify-center transition-all shadow-sm"
                        >
                            <i class="fa-solid fa-xmark"></i>
                        </button>
                    </div>
                    <div
                        id="historyList"
                        class="flex-1 overflow-y-auto p-4 space-y-3 custom-scrollbar"
                    >
                        <!-- History Items Injected Here -->
                        <div
                            class="flex flex-col items-center justify-center h-full text-gray-400"
                        >
                            <i
                                class="fa-solid fa-circle-notch fa-spin text-2xl mb-2 text-[#2F5D50]"
                            ></i>
                            <p>Cargando historial...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Data for Client Script -->
    <div
        id="dashboard-data"
        data-user-id={userId}
        data-user-name={userName}
        class="hidden"
    >
    </div>

    <script>
        import { generateConsentPDF } from "../utils/ConsentPDFGenerator";

        interface Appointment {
            id: string;
            status: string;
            nombre_paciente: string;
            inithour: string;
            endhour: string;
            servicio: string;
            reason: string;
            currentday: string;
            idpatient: string; // Added this as it was missing in interface but used
            [key: string]: any;
        }

        interface Additional {
            id: string;
            name: string;
            description: string;
            value: string;
        }

        document.addEventListener("DOMContentLoaded", () => {
            const dataEl = document.getElementById("dashboard-data");
            if (!dataEl) return;
            const userId = dataEl.dataset.userId;
            const userName = dataEl.dataset.userName;

            const dateInput = document.getElementById(
                "dateFilter",
            ) as HTMLInputElement;
            const grid = document.getElementById(
                "appointmentsGrid",
            ) as HTMLElement;

            // Modal Elements
            const modal = document.getElementById(
                "appointmentModal",
            ) as HTMLElement;
            const modalContent = document.getElementById(
                "modalContent",
            ) as HTMLElement;
            const modalOverlay = document.getElementById(
                "modalOverlay",
            ) as HTMLElement;
            const closeModalBtn = document.getElementById(
                "closeModalBtn",
            ) as HTMLElement;

            const startBtn = document.getElementById(
                "startConsultationBtn",
            ) as HTMLButtonElement;
            const confirmSignBtn = document.getElementById(
                "confirmSignatureBtn",
            ) as HTMLElement;
            const saveDraftBtn = document.getElementById(
                "saveDraftBtn",
            ) as HTMLButtonElement;
            const finishBtn = document.getElementById(
                "finishConsultationBtn",
            ) as HTMLButtonElement;
            const consentSection = document.getElementById(
                "consentSection",
            ) as HTMLElement;
            const consultationFields = document.getElementById(
                "consultationFields",
            ) as HTMLElement;
            const initialsInput = document.getElementById(
                "patientInitials",
            ) as HTMLInputElement;
            const errorMsg = document.getElementById(
                "timeValidationError",
            ) as HTMLElement;

            // PDF Preview Element
            const pdfPreview = document.getElementById(
                "pdfPreview",
            ) as HTMLElement;

            // Canvas Elements
            const canvas = document.getElementById(
                "signatureCanvas",
            ) as HTMLCanvasElement;
            const clearBtn = document.getElementById(
                "clearSignatureBtn",
            ) as HTMLElement;
            const placeholder = document.getElementById(
                "signaturePlaceholder",
            ) as HTMLElement;
            let ctx: CanvasRenderingContext2D | null = null;
            let isDrawing = false;
            let currentAppointment: Appointment | null = null;
            let currentPdfBlob: Blob | null = null;

            // Check for required elements
            if (
                !modal ||
                !modalContent ||
                !modalOverlay ||
                !closeModalBtn ||
                !startBtn ||
                !confirmSignBtn ||
                !finishBtn ||
                !consentSection ||
                !consultationFields ||
                !initialsInput ||
                !errorMsg ||
                !pdfPreview ||
                !canvas ||
                !clearBtn ||
                !placeholder
            ) {
                console.error("Required elements not found");
                return;
            }

            // Initialize Date to Today
            const today = new Date();
            const localDate = today.toLocaleDateString("en-CA"); // YYYY-MM-DD format
            dateInput.value = localDate;

            // Initial Fetch
            fetchAppointments(localDate);

            // Date Change Listener
            dateInput.addEventListener("change", (e) => {
                const target = e.target as HTMLInputElement;
                fetchAppointments(target.value);
            });

            // --- Fetch Logic ---
            async function fetchAppointments(date: string) {
                if (!grid) return;
                if (!userId) {
                    grid.innerHTML = `
                        <div class="col-span-full py-12 flex flex-col items-center justify-center text-red-400">
                            <i class="fa-solid fa-triangle-exclamation text-4xl mb-4"></i>
                            <p>Error de sesión: No se encontró el ID del usuario.</p>
                            <p class="text-sm mt-2">Por favor, cierra sesión e intenta de nuevo.</p>
                        </div>
                    `;
                    return;
                }

                grid.innerHTML = `
                    <div class="col-span-full py-12 flex flex-col items-center justify-center text-gray-400">
                        <i class="fa-solid fa-circle-notch fa-spin text-4xl mb-4 text-[#2F5D50]"></i>
                        <p>Cargando citas...</p>
                    </div>
                `;

                try {
                    const res = await fetch(
                        `/api/v1/DashboardEmpleado/${userId}?date=${date}`,
                    );
                    if (!res.ok) throw new Error("Error fetching appointments");
                    const data = await res.json();
                    renderAppointments(data);
                } catch (error) {
                    console.error(error);
                    grid.innerHTML = `
                        <div class="col-span-full py-12 flex flex-col items-center justify-center text-red-400">
                            <i class="fa-solid fa-triangle-exclamation text-4xl mb-4"></i>
                            <p>Error al cargar las citas</p>
                        </div>
                    `;
                }
            }

            // --- Helper: Calcular Edad ---
            function calcularEdad(fechaNacimiento: string): number | string {
                if (!fechaNacimiento) return "?";
                const hoy = new Date();
                const nacimiento = new Date(fechaNacimiento);
                let edad = hoy.getFullYear() - nacimiento.getFullYear();
