---
export const prerender = false;
import Layout from "../layouts/Layout.astro";
import NavBar from "../components/NavBar.astro";
import TopTag from "../components/TopTag.astro";
import { jwtVerify } from "jose";

const token = Astro.cookies.get("auth_token")?.value;
// NOTA: En producción, usa variables de entorno
const SECRET_KEY = new TextEncoder().encode("secret_dev_key_change_in_prod");

let currentUser = null;

if (token) {
    try {
        const { payload } = await jwtVerify(token, SECRET_KEY);
        currentUser = payload;
    } catch (error) {
        console.error("Error validando sesión:", error);
        return Astro.redirect("/");
    }
} else {
    return Astro.redirect("/");
}

const userName = currentUser
    ? `${currentUser.firstname} ${currentUser.lastname}`
    : "Empleado";
const userId = currentUser?.id;
---

<Layout title="Dashboard Empleado">
    <div
        class="flex h-[100dvh] overflow-hidden bg-gradient-to-br from-[#F0F4F8] via-[#E6F0EA] to-[#F0F4F8]"
    >
        <NavBar />
        <div class="flex-1 flex flex-col min-w-0 overflow-hidden relative">
            <!-- Background Elements -->
            <div
                class="absolute top-[-10%] right-[-5%] w-96 h-96 bg-[#2F5D50]/10 rounded-full blur-3xl pointer-events-none"
            >
            </div>
            <div
                class="absolute bottom-[-10%] left-[-5%] w-96 h-96 bg-[#2F5D50]/5 rounded-full blur-3xl pointer-events-none"
            >
            </div>

            <TopTag titulo="Mi Agenda" nombreUsuario={userName} />

            <main
                class="flex-1 overflow-y-auto p-4 sm:p-6 lg:p-8 scrollbar-thin scrollbar-thumb-[#2F5D50]/20 scrollbar-track-transparent relative z-10"
            >
                <div class="max-w-5xl mx-auto space-y-6">
                    <!-- Date Filter Card -->
                    <div
                        class="glass-panel rounded-3xl p-6 border border-white/40 shadow-lg flex flex-col sm:flex-row justify-between items-center gap-4"
                    >
                        <div>
                            <h2 class="text-xl font-bold text-[#2F5D50]">
                                Citas Programadas
                            </h2>
                            <p class="text-sm text-gray-500">
                                Selecciona una fecha para ver tu agenda
                            </p>
                        </div>
                        <div class="relative group w-full sm:w-auto">
                            <input
                                type="date"
                                id="dateFilter"
                                class="glass-input w-full sm:w-48 rounded-xl px-4 py-2.5 font-bold text-[#2F5D50] outline-none focus:ring-2 focus:ring-[#2F5D50]/20 transition-all cursor-pointer"
                            />
                            <div
                                class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none text-[#2F5D50]"
                            >
                                <i class="fa-regular fa-calendar"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Appointments Grid -->
                    <div
                        id="appointmentsGrid"
                        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"
                    >
                        <!-- Content injected via JS -->
                        <div
                            class="col-span-full py-12 flex flex-col items-center justify-center text-gray-400"
                        >
                            <i
                                class="fa-solid fa-circle-notch fa-spin text-4xl mb-4 text-[#2F5D50]"
                            ></i>
                            <p>Cargando citas...</p>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Appointment Detail Modal -->
    <div id="appointmentModal" class="fixed inset-0 z-50 hidden">
        <div
            class="fixed inset-0 bg-black/60 backdrop-blur-sm transition-opacity"
            id="modalOverlay"
        >
        </div>
        <div
            class="fixed inset-0 flex items-center justify-center p-4 sm:p-6 overflow-y-auto"
        >
            <div
                class="bg-white rounded-3xl shadow-2xl w-full max-w-lg transform transition-all scale-95 opacity-0 flex flex-col max-h-[90vh]"
                id="modalContent"
            >
                <!-- Modal Header -->
                <div
                    class="p-6 border-b border-gray-100 flex justify-between items-start bg-[#2F5D50]/5"
                >
                    <div>
                        <h3
                            class="text-xl font-bold text-[#2F5D50]"
                            id="modalPatientName"
                        >
                            Nombre del Paciente
                        </h3>
                        <p
                            class="text-sm text-gray-500 flex items-center gap-2 mt-1"
                        >
                            <i class="fa-regular fa-clock"></i>
                            <span id="modalTimeRange">00:00 - 00:00</span>
                        </p>
                    </div>
                    <button
                        id="closeModalBtn"
                        class="w-8 h-8 rounded-full bg-white text-gray-400 hover:text-red-500 hover:bg-red-50 flex items-center justify-center transition-all shadow-sm"
                    >
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                </div>

                <!-- Modal Body -->
                <div class="p-6 overflow-y-auto space-y-6">
                    <!-- Info Cards -->
                    <div class="grid grid-cols-2 gap-4">
                        <div
                            class="bg-blue-50 p-4 rounded-2xl border border-blue-100"
                        >
                            <p
                                class="text-xs text-blue-600 font-bold uppercase mb-1"
                            >
                                Servicio
                            </p>
                            <p
                                class="font-semibold text-gray-800 text-sm"
                                id="modalService"
                            >
                                Valoración
                            </p>
                        </div>
                        <div
                            class="bg-purple-50 p-4 rounded-2xl border border-purple-100"
                        >
                            <p
                                class="text-xs text-purple-600 font-bold uppercase mb-1"
                            >
                                Estado
                            </p>
                            <p
                                class="font-semibold text-gray-800 text-sm capitalize"
                                id="modalStatus"
                            >
                                Pendiente
                            </p>
                        </div>
                    </div>

                    <div
                        class="bg-gray-50 p-4 rounded-2xl border border-gray-100"
                    >
                        <p
                            class="text-xs text-gray-500 font-bold uppercase mb-1"
                        >
                            Motivo de consulta
                        </p>
                        <p class="text-gray-700 text-sm" id="modalReason">
                            Dolor en la espalda baja...
                        </p>
                    </div>

                    <!-- Consent & Signature Section -->
                    <div class="space-y-3">
                        <div class="flex justify-between items-center">
                            <h4 class="font-bold text-gray-800 text-sm">
                                Consentimiento Informado
                            </h4>
                            <button
                                id="clearSignatureBtn"
                                class="text-xs text-red-500 hover:text-red-700 font-medium underline"
                            >
                                Borrar firma
                            </button>
                        </div>
                        <div
                            class="border-2 border-dashed border-gray-300 rounded-xl bg-gray-50 relative overflow-hidden touch-none"
                            style="height: 160px;"
                        >
                            <canvas
                                id="signatureCanvas"
                                class="w-full h-full cursor-crosshair"></canvas>
                            <div
                                id="signaturePlaceholder"
                                class="absolute inset-0 flex items-center justify-center pointer-events-none text-gray-400 text-sm"
                            >
                                Firmar aquí
                            </div>
                        </div>
                        <p class="text-[10px] text-gray-400 text-center">
                            Al firmar, el paciente acepta los términos y
                            condiciones del tratamiento.
                        </p>
                    </div>
                </div>

                <!-- Modal Footer -->
                <div
                    class="p-6 border-t border-gray-100 bg-gray-50 rounded-b-3xl"
                >
                    <button
                        id="startConsultationBtn"
                        class="w-full py-3.5 rounded-xl bg-[#2F5D50] text-white font-bold shadow-lg shadow-[#2F5D50]/30 hover:bg-[#234D20] active:scale-[0.98] transition-all disabled:opacity-50 disabled:cursor-not-allowed disabled:shadow-none flex items-center justify-center gap-2"
                    >
                        <i class="fa-solid fa-stethoscope"></i>
                        <span>Iniciar Consulta</span>
                    </button>
                    <p
                        id="timeValidationError"
                        class="text-xs text-red-500 text-center mt-2 hidden font-medium"
                    >
                        Solo puedes iniciar la consulta entre <span
                            id="allowedTimeRange"></span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script define:vars={{ userId }}>
        document.addEventListener("DOMContentLoaded", () => {
            const dateInput = document.getElementById("dateFilter");
            const grid = document.getElementById("appointmentsGrid");

            // Modal Elements
            const modal = document.getElementById("appointmentModal");
            const modalContent = document.getElementById("modalContent");
            const modalOverlay = document.getElementById("modalOverlay");
            const closeModalBtn = document.getElementById("closeModalBtn");
            const startBtn = document.getElementById("startConsultationBtn");
            const errorMsg = document.getElementById("timeValidationError");

            // Canvas Elements
            const canvas = document.getElementById("signatureCanvas");
            const clearBtn = document.getElementById("clearSignatureBtn");
            const placeholder = document.getElementById("signaturePlaceholder");
            let ctx = null;
            let isDrawing = false;
            let currentAppointment = null;

            // Initialize Date to Today
            const today = new Date();
            const localDate = today.toLocaleDateString("en-CA"); // YYYY-MM-DD format
            dateInput.value = localDate;

            // Initial Fetch
            fetchAppointments(localDate);

            // Date Change Listener
            dateInput.addEventListener("change", (e) => {
                fetchAppointments(e.target.value);
            });

            // --- Fetch Logic ---
            async function fetchAppointments(date) {
                if (!userId) {
                    grid.innerHTML = `
                        <div class="col-span-full py-12 flex flex-col items-center justify-center text-red-400">
                            <i class="fa-solid fa-triangle-exclamation text-4xl mb-4"></i>
                            <p>Error de sesión: No se encontró el ID del usuario.</p>
                            <p class="text-sm mt-2">Por favor, cierra sesión e intenta de nuevo.</p>
                        </div>
                    `;
                    return;
                }

                grid.innerHTML = `
                    <div class="col-span-full py-12 flex flex-col items-center justify-center text-gray-400">
                        <i class="fa-solid fa-circle-notch fa-spin text-4xl mb-4 text-[#2F5D50]"></i>
                        <p>Cargando citas...</p>
                    </div>
                `;

                try {
                    const res = await fetch(
                        `/api/v1/DashboardEmpleado/${userId}?date=${date}`,
                    );
                    if (!res.ok) throw new Error("Error fetching appointments");
                    const data = await res.json();
                    renderAppointments(data);
                } catch (error) {
                    console.error(error);
                    grid.innerHTML = `
                        <div class="col-span-full py-12 flex flex-col items-center justify-center text-red-400">
                            <i class="fa-solid fa-triangle-exclamation text-4xl mb-4"></i>
                            <p>Error al cargar las citas</p>
                        </div>
                    `;
                }
            }

            function renderAppointments(appointments) {
                if (!appointments || appointments.length === 0) {
                    grid.innerHTML = `
                        <div class="col-span-full py-12 flex flex-col items-center justify-center text-gray-400">
                            <i class="fa-regular fa-calendar-xmark text-5xl mb-4 opacity-50"></i>
                            <p class="text-lg">No tienes citas para este día</p>
                        </div>
                    `;
                    return;
                }

                grid.innerHTML = "";
                appointments.forEach((app) => {
                    const card = createAppointmentCard(app);
                    grid.appendChild(card);
                });
            }

            function createAppointmentCard(app) {
                const div = document.createElement("div");
                div.className =
                    "bg-white/80 backdrop-blur-sm rounded-3xl p-5 border border-white/60 shadow-sm hover:shadow-xl transition-all hover:-translate-y-1 cursor-pointer group relative overflow-hidden";

                // Status Color Logic
                const statusColors = {
                    concluded: "green",
                    confirmed: "blue",
                    canceled: "red",
                    pending: "yellow",
                };
                const color = statusColors[app.status?.toLowerCase()] || "gray";

                div.innerHTML = `
                    <div class="absolute left-0 top-0 bottom-0 w-1.5 bg-${color}-500"></div>
                    <div class="flex justify-between items-start mb-4 pl-3">
                        <div class="flex flex-col">
                            <span class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-1">Paciente</span>
                            <h3 class="font-bold text-gray-800 text-lg leading-tight group-hover:text-[#2F5D50] transition-colors">
                                ${app.nombre_paciente || "Desconocido"}
                            </h3>
                        </div>
                        <div class="flex flex-col items-end">
                             <span class="bg-[#2F5D50]/10 text-[#2F5D50] text-xs font-bold px-2.5 py-1 rounded-lg flex items-center gap-1">
                                <i class="fa-regular fa-clock"></i>
                                ${app.inithour?.substring(0, 5)}
                            </span>
                        </div>
                    </div>
                    
                    <div class="pl-3 space-y-2">
                        <div class="flex items-center gap-2 text-sm text-gray-600">
                            <div class="w-6 h-6 rounded-full bg-blue-50 flex items-center justify-center text-blue-500">
                                <i class="fa-solid fa-user-doctor text-xs"></i>
                            </div>
                            <span class="font-medium">${app.servicio || "Consulta General"}</span>
                        </div>
                        <div class="flex items-center gap-2 text-sm text-gray-500">
                            <div class="w-6 h-6 rounded-full bg-gray-100 flex items-center justify-center text-gray-400">
                                <i class="fa-solid fa-align-left text-xs"></i>
                            </div>
                            <span class="truncate max-w-[200px]">${app.reason || "Sin motivo especificado"}</span>
                        </div>
                    </div>

                    <div class="mt-4 pt-3 border-t border-gray-100 pl-3 flex justify-between items-center">
                        <span class="text-xs font-bold px-2 py-0.5 rounded-full bg-${color}-100 text-${color}-700 capitalize">
                            ${app.status}
                        </span>
                        <span class="text-[#2F5D50] text-xs font-bold group-hover:underline">Ver detalles <i class="fa-solid fa-arrow-right ml-1"></i></span>
                    </div>
                `;

                div.addEventListener("click", () => openModal(app));
                return div;
            }

            // --- Modal Logic ---
            function openModal(app) {
                currentAppointment = app;

                // Populate Data
                document.getElementById("modalPatientName").textContent =
                    app.nombre_paciente;
                document.getElementById("modalTimeRange").textContent =
                    `${app.inithour?.substring(0, 5)} - ${app.endhour?.substring(0, 5)}`;
                document.getElementById("modalService").textContent =
                    app.servicio;
                document.getElementById("modalStatus").textContent = app.status;
                document.getElementById("modalReason").textContent = app.reason;

                // Reset Canvas
                clearCanvas();

                // Validate Time for Button
                validateTime(app);

                // Show Modal
                modal.classList.remove("hidden");
                setTimeout(() => {
                    modalContent.classList.remove("scale-95", "opacity-0");
                    modalContent.classList.add("scale-100", "opacity-100");
                    initCanvas(); // Re-init canvas dimensions
                }, 10);
            }

            function closeModal() {
                modalContent.classList.remove("scale-100", "opacity-100");
                modalContent.classList.add("scale-95", "opacity-0");
                setTimeout(() => {
                    modal.classList.add("hidden");
                    currentAppointment = null;
                }, 300);
            }

            closeModalBtn.addEventListener("click", closeModal);
            modalOverlay.addEventListener("click", closeModal);

            // --- Time Validation Logic ---
            function validateTime(app) {
                const now = new Date();
                const currentTime = now.getHours() * 60 + now.getMinutes();

                const [startH, startM] = app.inithour.split(":").map(Number);
                const [endH, endM] = app.endhour.split(":").map(Number);

                const startTime = startH * 60 + startM;
                const endTime = endH * 60 + endM;

                const dateStr = app.currentday.split("T")[0]; // YYYY-MM-DD
                const todayStr = new Date().toLocaleDateString("en-CA");

                const isToday = dateStr === todayStr;
                const isWithinTime =
                    currentTime >= startTime && currentTime < endTime;

                // Logic: Must be today AND within time range
                // Note: User asked to restrict start.

                if (isToday && isWithinTime) {
                    startBtn.disabled = false;
                    startBtn.classList.remove(
                        "opacity-50",
                        "cursor-not-allowed",
                    );
                    errorMsg.classList.add("hidden");

                    // Setup Auto-Finish
                    const timeRemainingMs = (endTime - currentTime) * 60 * 1000; // minutes to ms
                    // In a real app, we'd set a timeout here to auto-close/finish
                    // setTimeout(finishConsultation, timeRemainingMs);
                } else {
                    startBtn.disabled = true;
                    startBtn.classList.add("opacity-50", "cursor-not-allowed");
                    errorMsg.classList.remove("hidden");
                    document.getElementById("allowedTimeRange").textContent =
                        `${app.inithour?.substring(0, 5)} - ${app.endhour?.substring(0, 5)}`;
                }
            }

            startBtn.addEventListener("click", () => {
                if (!startBtn.disabled) {
                    // Here we would save the signature and start the consultation
                    const signatureData = canvas.toDataURL(); // Base64 image
                    console.log(
                        "Starting consultation for:",
                        currentAppointment.id,
                    );
                    console.log("Signature:", signatureData);
                    alert("Consulta iniciada. Firma guardada.");
                    closeModal();
                }
            });

            // --- Canvas Logic ---
            function initCanvas() {
                // Fix canvas resolution for high DPI displays
                const rect = canvas.parentElement.getBoundingClientRect();
                canvas.width = rect.width;
                canvas.height = rect.height;

                ctx = canvas.getContext("2d");
                ctx.strokeStyle = "#000";
                ctx.lineWidth = 2;
                ctx.lineCap = "round";
            }

            function getPos(e) {
                const rect = canvas.getBoundingClientRect();
                const clientX = e.touches ? e.touches[0].clientX : e.clientX;
                const clientY = e.touches ? e.touches[0].clientY : e.clientY;
                return {
                    x: clientX - rect.left,
                    y: clientY - rect.top,
                };
            }

            function startDraw(e) {
                isDrawing = true;
                const { x, y } = getPos(e);
                ctx.beginPath();
                ctx.moveTo(x, y);
                placeholder.classList.add("hidden");
                e.preventDefault();
            }

            function draw(e) {
                if (!isDrawing) return;
                const { x, y } = getPos(e);
                ctx.lineTo(x, y);
                ctx.stroke();
                e.preventDefault();
            }

            function stopDraw() {
                isDrawing = false;
            }

            function clearCanvas() {
                if (ctx) ctx.clearRect(0, 0, canvas.width, canvas.height);
                placeholder.classList.remove("hidden");
            }

            // Mouse Events
            canvas.addEventListener("mousedown", startDraw);
            canvas.addEventListener("mousemove", draw);
            canvas.addEventListener("mouseup", stopDraw);
            canvas.addEventListener("mouseleave", stopDraw);

            // Touch Events (Mobile)
            canvas.addEventListener("touchstart", startDraw);
            canvas.addEventListener("touchmove", draw);
            canvas.addEventListener("touchend", stopDraw);

            clearBtn.addEventListener("click", clearCanvas);

            // Handle resize
            window.addEventListener("resize", initCanvas);
        });
    </script>
</Layout>
