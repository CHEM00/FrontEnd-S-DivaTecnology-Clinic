---
import NavBar from "../components/NavBar.astro";
import Layout from "../layouts/Layout.astro";
import DropDown from "../components/DropDown.astro";
import Boton from "../components/Boton.astro";
---

<Layout title="Pagos">
  <div class="pagos-container">
    <div id="ContenedorIzquierdo">
      <NavBar />
    </div>

    <div class="pagos-content">
      <!-- CONTENEDOR DE TÍTULO, BUSCADOR Y BOTONES -->
      <div class="pagos-header">
        <h1 class="pagos-title">Pagos</h1>

        <div class="pagos-controls">
          <input
            type="search"
            class="pagos-search-input"
            placeholder="Buscar pagos..."
          />

          <div class="pagos-buttons">
            <button class="btn-action">Exportar</button>
          </div>
        </div>
      </div>

      <!-- TABLA DE PAGOS -->
      <div class="pagos-table-wrapper">
        <table class="pagos-table">
          <thead>
            <tr>
              <th><input type="checkbox" /></th>
              <th>Paciente</th>
              <th>Producto/Servicio</th>
              <th>Precio</th>
              <th>IVA</th>
              <th>Subtotal</th>
              <th>Total</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><input type="checkbox" /></td>
              <td>Juan Pérez</td>
              <td>Ondas de choque</td>
              <td>$300.00</td>
              <td>$48.00</td>
              <td>$300.00</td>
              <td>$348.00</td>
              <td><button class="btn-action">Acciones</button></td>
            </tr>

            <tr>
              <td><input type="checkbox" /></td>
              <td>María García</td>
              <td>Consulta médica</td>
              <td>$500.00</td>
              <td>$80.00</td>
              <td>$500.00</td>
              <td>$580.00</td>
              <td><button class="btn-action">Acciones</button></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</Layout>
