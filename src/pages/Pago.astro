---
import NavBar from "../components/NavBar.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Pagos">
	<div class="pagos-container">
		<!-- Panel lateral izquierdo -->
		<NavBar />

		<!-- Contenido principal -->
		<div class="flex-1 flex flex-col overflow-hidden">
			<header class="bg-gray-100 shadow-sm border-b border-gray-200">
				<div class="flex items-center justify-between px-6 py-4">
					<div id="TituloTabla" class="flex">
						<h1 class="text-2xl font-bold text-[#2F5D50]">PAGOS</h1>
						<div class="flex ml-5 space-x-4">
							<input 
								type="text" 
								placeholder="Buscar..." 
								class="auth-input px-4 py-2 w-64"
							>
						</div>
					</div>
					<div class="flex items-center space-x-4">
						<span class="text-sm text-gray-600 justify-items-end">Bienvenido</span>
						<button onclick="logout()" class="auth-button px-4 py-2 text-sm">
							Cerrar Sesión
						</button>
					</div>
				</div>
			</header>

			<main class="flex-1 overflow-y-auto p-6">
				<!-- TABLA DE PAGOS -->
				<div class="pagos-table-wrapper">
					<table class="pagos-table w-full">
						<thead>
							<tr class="table-header">
								<th><input type="checkbox" /></th>
								<th>Paciente</th>
								<th>Producto/Servicio</th>
								<th>Precio</th>
								<th>IVA</th>
								<th>Subtotal</th>
								<th>Total</th>
								<th>Acciones</th>
							</tr>
						</thead>
						<tbody class="divide-y divide-gray-200">
							<tr>
								<td><input type="checkbox" /></td>
								<td>Juan Pérez</td>
								<td>Ondas de choque</td>
								<td>$300.00</td>
								<td>$48.00</td>
								<td>$300.00</td>
								<td>$348.00</td>
								<td>
									<button class="btn-action">Acciones</button>
								</td>
							</tr>

							<tr>
								<td><input type="checkbox" /></td>
								<td>María García</td>
								<td>Consulta médica</td>
								<td>$500.00</td>
								<td>$80.00</td>
								<td>$500.00</td>
								<td>$580.00</td>
								<td>
									<button class="btn-action">Acciones</button>
								</td>
							</tr>
						</tbody>
					</table>
				</div>

				<!-- PAGINACIÓN Y BOTONES -->
				<div class="historial-pagination">
					<div class="text-sm text-gray-600">1–10 de 99</div>
					<div class="flex items-center gap-3">
						<!-- Botón Exportar -->
						
						
						<span class="text-sm text-gray-600">Filas por página:</span>
						<select class="historial-select">
							<option>10</option>
							<option>25</option>
							<option>50</option>
						</select>
						<div class="flex items-center gap-2">
							<button class="btn-action px-3 py-1 text-sm">⟨</button>
							<span class="text-sm text-gray-600">1/10</span>
							<button class="btn-action px-3 py-1 text-sm">⟩</button>
						</div>
					</div>
				</div>
			</main>
		</div>
	</div>

	
</Layout>

<script>
		function logout() {
			localStorage.removeItem('token');
			window.location.href = '/';
		}
	</script>