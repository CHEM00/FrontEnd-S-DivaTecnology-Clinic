    <script>
        // Función para filtrar pagos
        async function filtrarPagos() {
            const pacienteId = document.getElementById('filterPaciente').value;
            const fecha = document.getElementById('filterFecha').value;
            const estado = document.getElementById('filterEstado').value;
            
            let url = 'http://localhost:3001/api/v1/HistorialPagos';
            
            if (pacienteId) {
                url = `http://localhost:3001/api/v1/HistorialPagos/paciente/${pacienteId}`;
            } else if (fecha) {
                url = `http://localhost:3001/api/v1/HistorialPagos/fecha/${fecha}`;
            }
            
            try {
                const response = await fetch(url);
                let pagos = await response.json();
                
                // Filtrar por estado si se seleccionó
                if (estado) {
                    pagos = pagos.filter(pago => pago.status === estado);
                }
                
                // Aquí deberías actualizar la tabla con los pagos filtrados
                console.log('Pagos filtrados:', pagos);
                // En una implementación real, aquí actualizarías la tabla
                alert(`Filtro aplicado. ${pagos.length} registros encontrados.`);
                
            } catch (error) {
                console.error('Error filtrando pagos:', error);
                alert('Error al aplicar filtros');
            }
        }

        // Función para limpiar filtros
        function limpiarFiltros() {
            document.getElementById('filterPaciente').value = '';
            document.getElementById('filterFecha').value = '';
            document.getElementById('filterEstado').value = '';
            location.reload();
        }

        // Función para cambiar página
        function cambiarPagina(direction) {
            // Implementación básica de paginación
            console.log('Cambiando página:', direction);
        }

        // Mostrar información de que es solo lectura
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Historial de pagos - Vista de solo lectura');
            console.log('Los pagos se generan automáticamente basados en las citas');
        });
    </script>

