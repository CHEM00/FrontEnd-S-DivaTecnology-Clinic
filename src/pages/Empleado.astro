            if (!field.value.trim()) {
                mostrarError(`El campo ${field.previousElementSibling.textContent} es obligatorio`);
                field.focus();
                return;
            }
        }

        // Usar nombres exactos de la base de datos (minúsculas)
        const empleadoData = {
            firstname: document.getElementById('agregarNombre').value,
            lastname: document.getElementById('agregarApellidoPaterno').value,
            motherlastname: document.getElementById('agregarApellidoMaterno').value,
            birthday: document.getElementById('agregarBirthday').value || null,
            phone: document.getElementById('agregarPhone').value,
            email: document.getElementById('agregarEmail').value,
            password: document.getElementById('agregarPassword').value,
            photo: document.getElementById('agregarPhoto').value || null
        };

        console.log('Datos a enviar (BD minúsculas):', empleadoData);

        try {
            const response = await fetch('http://localhost:3001/api/v1/Trabajadores', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(empleadoData)
            });

            if (response.ok) {
                cerrarModal('modalAgregarEmpleado');
                mostrarExito('Empleado agregado correctamente');
                setTimeout(() => {
                    location.reload();
                }, 1500);
            } else {
                const errorData = await response.json();
                console.error('Error del servidor:', errorData);
                mostrarError('Error al agregar el empleado: ' + (errorData.error || 'Error desconocido'));
            }
        } catch (error) {
            console.error('Error:', error);
            mostrarError('Error de conexión con el servidor');
        }
    });

    // Manejar envío del formulario editar - MEJORADA con validación de ID
    document.getElementById('formEditarEmpleado')?.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        // Validar que tenemos un ID válido
        if (!empleadoSeleccionado || isNaN(empleadoSeleccionado)) {
            mostrarError('Error: No se ha seleccionado un empleado válido para editar');
            return;
        }
        
        const requiredFields = [
            'editarNombre', 'editarApellidoPaterno', 'editarApellidoMaterno',
            'editarPhone', 'editarEmail'
        ];
        
        for (const fieldId of requiredFields) {
            const field = document.getElementById(fieldId);
            if (!field.value.trim()) {
                mostrarError(`El campo ${field.previousElementSibling.textContent} es obligatorio`);
                field.focus();
                return;
            }
        }

        // Usar nombres exactos de la base de datos (minúsculas)
        const empleadoData = {
            firstname: document.getElementById('editarNombre').value,
            lastname: document.getElementById('editarApellidoPaterno').value,
            motherlastname: document.getElementById('editarApellidoMaterno').value,
            birthday: document.getElementById('editarBirthday').value || null,
            phone: document.getElementById('editarPhone').value,
            email: document.getElementById('editarEmail').value,
            photo: document.getElementById('editarPhoto').value || null
        };

        // Solo incluir password si se proporcionó uno nuevo
        const nuevaPassword = document.getElementById('editarPassword').value;
        if (nuevaPassword) {
            empleadoData.password = nuevaPassword;
        }

        console.log('Datos a enviar para editar (BD minúsculas):', empleadoData);
        console.log('ID del empleado a editar:', empleadoSeleccionado);

        try {
            const response = await fetch(`http://localhost:3001/api/v1/Trabajadores/${empleadoSeleccionado}`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(empleadoData)
            });

            if (response.ok) {
                cerrarModal('modalEditarEmpleado');
                mostrarExito('Empleado actualizado correctamente');
                setTimeout(() => {
                    location.reload();
                }, 1500);
            } else {
                const errorData = await response.json();
                console.error('Error del servidor:', errorData);
                mostrarError('Error al actualizar el empleado: ' + (errorData.error || 'Error desconocido'));
            }
        } catch (error) {
            console.error('Error:', error);
            mostrarError('Error de conexión con el servidor: ' + error.message);
        }
    });

    // Seleccionar todos los checkboxes
    document.getElementById('selectAll')?.addEventListener('change', function(e) {
