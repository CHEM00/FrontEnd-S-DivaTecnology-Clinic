    // Variables globales
    let empleadoSeleccionado = null;
    let empleadoData = {};

    // Función para verificar checkbox seleccionado - MEJORADA
    function verificarCheckboxSeleccionado(empleadoId) {
        try {
            // Convertir a número explícitamente
            const idNum = Number(empleadoId);
            if (isNaN(idNum)) {
                console.error('ID inválido:', empleadoId);
                return false;
            }

            const checkboxes = document.querySelectorAll(`.empleado-checkbox[value="${empleadoId}"]`);
            let algunoSeleccionado = false;
            
            checkboxes.forEach(checkbox => {
                if (checkbox.checked) {
                    algunoSeleccionado = true;
                }
            });
            
            if (!algunoSeleccionado) {
                mostrarError('Por favor, seleccione un dato marcando el checkbox para gestionar.');
                return false;
            }
            return true;
        } catch (error) {
            console.error('Error verificando checkbox:', error);
            mostrarError('Error al verificar la selección del empleado');
            return false;
        }
    }

    // Abrir modal de acciones - MEJORADA con validación de ID
    window.abrirModalAcciones = function(id, firstname, lastname, motherlastname, phone, email, birthdate, photo, nombreCompleto) {
        // Validar que el ID sea un número
        const idNum = Number(id);
        if (isNaN(idNum)) {
            console.error('ID inválido recibido:', id);
            mostrarError('Error: ID de empleado inválido');
            return;
        }

        if (!verificarCheckboxSeleccionado(id)) {
            return;
        }
        
        empleadoSeleccionado = idNum; // Guardar como número
        empleadoData = {
            firstname,
            lastname,
            motherlastname,
            phone,
            email,
            birthdate,
            photo,
            nombreCompleto
        };
        
        document.getElementById('nombreEmpleadoAcciones').textContent = nombreCompleto;
        document.getElementById('modalAcciones').classList.remove('hidden');
    };

    // Abrir modal agregar
    window.abrirModalAgregar = function() {
        const form = document.getElementById('formAgregarEmpleado');
        if (form) {
            form.reset();
        }
        
        const modal = document.getElementById('modalAgregarEmpleado');
        if (modal) {
            modal.classList.remove('hidden');
        }
    };

    // Función global para cerrar modales
    window.cerrarModal = function(modalId) {
        const modal = document.getElementById(modalId);
        if (modal) {
            modal.classList.add('hidden');
        }
    };

    // Función para mostrar mensajes de éxito
    function mostrarExito(mensaje) {
        document.getElementById('mensajeExito').textContent = mensaje;
        document.getElementById('modalExito').classList.remove('hidden');
    }

    // Función para mostrar mensajes de error
    function mostrarError(mensaje) {
        document.getElementById('mensajeError').textContent = mensaje;
        document.getElementById('modalError').classList.remove('hidden');
    }

    // Configurar eventos cuando el DOM esté listo
    document.addEventListener('DOMContentLoaded', function() {
        // Botón Editar en modal de acciones
        document.getElementById('btnEditarAccion').addEventListener('click', function() {
            cerrarModal('modalAcciones');
            abrirModalEditar();
        });

        // Botón Eliminar en modal de acciones
        document.getElementById('btnEliminarAccion').addEventListener('click', function() {
            cerrarModal('modalAcciones');
            abrirModalConfirmarEliminar();
        });

        // Botón Confirmar Eliminar
        document.getElementById('btnConfirmarEliminar').addEventListener('click', function() {
            eliminarEmpleado(empleadoSeleccionado);
        });
    });

    // Abrir modal de edición
    function abrirModalEditar() {
        // Validar que tenemos un ID válido
        if (!empleadoSeleccionado || isNaN(empleadoSeleccionado)) {
            mostrarError('Error: No se ha seleccionado un empleado válido');
            return;
        }

        // Llenar formulario con datos actuales
        document.getElementById('editarId').value = empleadoSeleccionado;
        document.getElementById('editarNombre').value = empleadoData.firstname || '';
        document.getElementById('editarApellidoPaterno').value = empleadoData.lastname || '';
        document.getElementById('editarApellidoMaterno').value = empleadoData.motherlastname || '';
        document.getElementById('editarPhone').value = empleadoData.phone || '';
        document.getElementById('editarEmail').value = empleadoData.email || '';
        document.getElementById('editarBirthday').value = empleadoData.birthdate || '';
        document.getElementById('editarPhoto').value = empleadoData.photo || '';
        document.getElementById('editarPassword').value = '';
        
        const modal = document.getElementById('modalEditarEmpleado');
        if (modal) {
            modal.classList.remove('hidden');
        }
    }

    // Abrir modal de confirmación de eliminación
    function abrirModalConfirmarEliminar() {
        document.getElementById('nombreEmpleadoEliminar').textContent = empleadoData.nombreCompleto;
        document.getElementById('modalConfirmarEliminar').classList.remove('hidden');
    }

    // Función para eliminar empleado - MEJORADA con validación
    async function eliminarEmpleado(id) {
        // Validar ID
        if (!id || isNaN(id)) {
            mostrarError('Error: ID de empleado inválido');
            return;
        }

        try {
            console.log('Eliminando empleado con ID:', id);
            
            const response = await fetch(`http://localhost:3001/api/v1/Trabajadores/${id}`, {
                method: 'DELETE',
            });
            
            if (response.ok) {
                cerrarModal('modalConfirmarEliminar');
                mostrarExito('Empleado eliminado correctamente');
                setTimeout(() => {
                    location.reload();
                }, 1500);
            } else {
                const errorData = await response.json();
                console.error('Error del servidor:', errorData);
                mostrarError('Error al eliminar el empleado: ' + (errorData.error || 'Error desconocido'));
            }
        } catch (error) {
            console.error('Error:', error);
            mostrarError('Error de conexión con el servidor: ' + error.message);
        }
    }

