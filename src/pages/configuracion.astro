---
import NavBar from "../components/NavBar.astro";
import Layout from "../layouts/Layout.astro";
import Boton from "../components/Boton.astro";
---

<Layout title="Configuración">
    <div class="bg-[#8eb79f] flex flex-row min-h-screen">
        <div id="ContenedorIzquierdo">
            <NavBar />
        </div>
        <div id="ContenedorDerecho" class="flex flex-col w-full p-6">
            <!-- Encabezado -->
            <div class="w-full flex mb-6">
                <div class="flex flex-1 items-center justify-left">
                    <span class="mr-8 text-3xl font-sans font-bold">Configuración</span>
                </div>
                <div class="flex flex-1 items-center justify-end">
                    <Boton> 
                        <slot>Guardar cambios</slot> 
                    </Boton>
                </div>
            </div>

            <!-- Contenido principal -->
            <div class="flex flex-col lg:flex-row gap-6">
                <!-- Menú lateral -->
                <div class="lg:w-1/4 bg-white rounded-lg shadow p-4 h-fit">
                    <ul class="space-y-2">
                        <li class="p-3 bg-[#2F5D50] text-white rounded-lg cursor-pointer">
                            <i class="fas fa-building mr-2"></i>Información de la Clínica
                        </li>
                        <li class="p-3 hover:bg-gray-100 rounded-lg cursor-pointer">
                            <i class="fas fa-users mr-2"></i>Usuarios y Roles
                        </li>
                        <li class="p-3 hover:bg-gray-100 rounded-lg cursor-pointer">
                            <i class="fas fa-cog mr-2"></i>Preferencias
                        </li>
                        <li class="p-3 hover:bg-gray-100 rounded-lg cursor-pointer">
                            <i class="fas fa-receipt mr-2"></i>Facturación
                        </li>
                        <li class="p-3 hover:bg-gray-100 rounded-lg cursor-pointer">
                            <i class="fas fa-bell mr-2"></i>Notificaciones
                        </li>
                        <li class="p-3 hover:bg-gray-100 rounded-lg cursor-pointer">
                            <i class="fas fa-shield-alt mr-2"></i>Seguridad
                        </li>
                    </ul>
                </div>

                <!-- Panel de configuración -->
                <div class="lg:w-3/4 bg-white rounded-lg shadow p-6">
                    <!-- Información de la Clínica -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold mb-4 text-[#2F5D50]">
                            <i class="fas fa-building mr-2"></i>Información de la Clínica
                        </h2>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="space-y-2">
                                <label class="block text-sm font-medium text-gray-700">Nombre de la Clínica</label>
                                <input type="text" class="w-full p-2 border border-gray-300 rounded-lg" 
                                       value="Clínica Especializada" />
                            </div>
                            
                            <div class="space-y-2">
                                <label class="block text-sm font-medium text-gray-700">RFC</label>
                                <input type="text" class="w-full p-2 border border-gray-300 rounded-lg" 
                                       value="CLI123456789" />
                            </div>
                            
                            <div class="space-y-2">
                                <label class="block text-sm font-medium text-gray-700">Correo Electrónico</label>
                                <input type="email" class="w-full p-2 border border-gray-300 rounded-lg" 
                                       value="contacto@clinica.com" />
                            </div>
                            
                            <div class="space-y-2">
                                <label class="block text-sm font-medium text-gray-700">Teléfono</label>
                                <input type="tel" class="w-full p-2 border border-gray-300 rounded-lg" 
                                       value="5512345678" />
                            </div>
                            
                            <div class="space-y-2 md:col-span-2">
                                <label class="block text-sm font-medium text-gray-700">Dirección</label>
                                <input type="text" class="w-full p-2 border border-gray-300 rounded-lg" 
                                       value="Av. Principal #123, Col. Centro" />
                            </div>
                            
                            <div class="space-y-2">
                                <label class="block text-sm font-medium text-gray-700">Código Postal</label>
                                <input type="text" class="w-full p-2 border border-gray-300 rounded-lg" 
                                       value="01000" />
                            </div>
                        </div>
                    </div>

                    <!-- Configuración de Horarios -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold mb-4 text-[#2F5D50]">
                            <i class="fas fa-clock mr-2"></i>Horarios de Atención
                        </h2>
                        
                        <div class="space-y-4">
                            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                <span class="font-medium">Lunes a Viernes</span>
                                <div class="flex items-center space-x-2">
                                    <input type="time" class="p-2 border border-gray-300 rounded-lg" value="09:00" />
                                    <span>a</span>
                                    <input type="time" class="p-2 border border-gray-300 rounded-lg" value="18:00" />
                                </div>
                            </div>
                            
                            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                <span class="font-medium">Sábados</span>
                                <div class="flex items-center space-x-2">
                                    <input type="time" class="p-2 border border-gray-300 rounded-lg" value="09:00" />
                                    <span>a</span>
                                    <input type="time" class="p-2 border border-gray-300 rounded-lg" value="14:00" />
                                </div>
                            </div>
                            
                            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                <span class="font-medium">Domingos</span>
                                <span class="text-gray-500">Cerrado</span>
                            </div>
                        </div>
                    </div>

                    <!-- Configuración de Facturación -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold mb-4 text-[#2F5D50]">
                            <i class="fas fa-receipt mr-2"></i>Configuración de Facturación
                        </h2>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="space-y-2">
                                <label class="block text-sm font-medium text-gray-700">Porcentaje de IVA</label>
                                <input type="number" class="w-full p-2 border border-gray-300 rounded-lg" 
                                       value="16" step="0.1" />
                            </div>
                            
                            <div class="space-y-2">
                                <label class="block text-sm font-medium text-gray-700">Moneda</label>
                                <select class="w-full p-2 border border-gray-300 rounded-lg">
                                    <option value="MXN" selected>Peso Mexicano (MXN)</option>
                                    <option value="USD">Dólar Americano (USD)</option>
                                </select>
                            </div>
                            
                            <div class="space-y-2 md:col-span-2">
                                <label class="flex items-center">
                                    <input type="checkbox" class="rounded" checked />
                                    <span class="ml-2 text-sm font-medium text-gray-700">
                                        Generar factura automáticamente al completar cita
                                    </span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Configuración de Notificaciones -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold mb-4 text-[#2F5D50]">
                            <i class="fas fa-bell mr-2"></i>Notificaciones
                        </h2>
                        
                        <div class="space-y-4">
                            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                <div>
                                    <span class="font-medium block">Recordatorio de citas</span>
                                    <span class="text-sm text-gray-600">Enviar recordatorio a pacientes</span>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" class="sr-only peer" checked />
                                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none rounded-full peer 
                                                peer-checked:after:translate-x-full peer-checked:after:border-white 
                                                after:content-[''] after:absolute after:top-[2px] after:left-[2px] 
                                                after:bg-white after:border-gray-300 after:border after:rounded-full 
                                                after:h-5 after:w-5 after:transition-all peer-checked:bg-[#2F5D50]">
                                    </div>
                                </label>
                            </div>
                            
                            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                <div>
                                    <span class="font-medium block">Notificaciones por correo</span>
                                    <span class="text-sm text-gray-600">Enviar notificaciones por correo electrónico</span>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" class="sr-only peer" checked />
                                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none rounded-full peer 
                                                peer-checked:after:translate-x-full peer-checked:after:border-white 
                                                after:content-[''] after:absolute after:top-[2px] after:left-[2px] 
                                                after:bg-white after:border-gray-300 after:border after:rounded-full 
                                                after:h-5 after:w-5 after:transition-all peer-checked:bg-[#2F5D50]">
                                    </div>
                                </label>
                            </div>
                            
                            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                <div>
                                    <span class="font-medium block">Notificaciones de nuevos pacientes</span>
                                    <span class="text-sm text-gray-600">Notificar cuando se registre un nuevo paciente</span>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" class="sr-only peer" />
                                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none rounded-full peer 
                                                peer-checked:after:translate-x-full peer-checked:after:border-white 
                                                after:content-[''] after:absolute after:top-[2px] after:left-[2px] 
                                                after:bg-white after:border-gray-300 after:border after:rounded-full 
                                                after:h-5 after:w-5 after:transition-all peer-checked:bg-[#2F5D50]">
                                    </div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

