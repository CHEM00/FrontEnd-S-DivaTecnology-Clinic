---
import NavBar from "../components/NavBar.astro";
import Layout from "../layouts/Layout.astro";
import TopTag from "../components/TopTag.astro";

interface Clinic {
    id: number;
    name: string;
    rfc_clinic: string;
    email: string;
    phone: string;
    address: string;
    postalcode: string;
    logo: string;
}

interface ClinicSchedule {
    id: number;
    dayofweek: number;
    openhour: string;
    closehour: string;
    maxappointmentsperhour: number;
    appointmentduration: string;
    break_start: string | null;
    break_end: string | null;
}

let clinic: Clinic | null = null;
let schedules: ClinicSchedule[] = [];
let error = "";

try {
    // Obtener datos de la clínica
    const clinicResponse = await fetch("http://localhost:3001/api/v1/Clinica");
    if (clinicResponse.ok) {
        const data = await clinicResponse.json();
        clinic = Array.isArray(data) ? data[0] : data;
    } else {
        error = "Error al cargar los datos de la clínica";
    }

    // Obtener horarios de la clínica
    const schedulesResponse = await fetch("http://localhost:3001/api/v1/ClinicSchedules");
    if (schedulesResponse.ok) {
        const data = await schedulesResponse.json();
        schedules = Array.isArray(data) ? data : [];
    }
} catch (e) {
    console.error("Error de conexión:", e);
    error = "Error de conexión con el servidor";
}

// Mapear números de día a nombres
const dayNames = ['Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado'];

// Función para formatear hora
const formatTime = (timeString: string) => {
    if (!timeString) return '';
    return timeString.substring(0, 5); // Extrae HH:MM
};
---

<Layout title="Configuración">
    <div class="flex h-[100dvh] overflow-hidden bg-gradient-to-br from-[#F0F4F8] via-[#E6F0EA] to-[#F0F4F8]">
        <NavBar />
        <div class="flex-1 flex flex-col min-w-0 overflow-hidden relative">
            <!-- Background Elements for depth -->
            <div class="absolute top-[-10%] right-[-5%] w-96 h-96 bg-[#2F5D50]/10 rounded-full blur-3xl pointer-events-none"></div>
            <div class="absolute bottom-[-10%] left-[-5%] w-96 h-96 bg-[#2F5D50]/5 rounded-full blur-3xl pointer-events-none"></div>

            <TopTag
                titulo="Configuración del Sistema"
                nombreUsuario="Administrador"
            />

            <main class="flex-1 overflow-y-auto p-4 sm:p-6 lg:p-8 scrollbar-thin scrollbar-thumb-[#2F5D50]/20 scrollbar-track-transparent relative z-10">
                <!-- Mostrar error si existe -->
                {error && (
                    <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-xl shadow-sm animate-fade-in-up flex items-center gap-3">
                        <i class="fa-solid fa-triangle-exclamation text-xl" />
                        <div>
                            <p class="font-bold">Error</p>
                            <p>{error}</p>
                        </div>
                    </div>
                )}

                <!-- Header con título y botón guardar -->
                <div class="flex flex-col sm:flex-row justify-between items-center mb-8 gap-4 animate-fade-in-up stagger-1">
                    <div>
                        <h1 class="text-3xl font-bold text-[#2F5D50] tracking-tight">
                            Ajustes Generales
                        </h1>
                        <p class="text-gray-500 mt-1">
                            Personaliza el funcionamiento de la clínica
                        </p>
                    </div>
                    <button
                        class="glass-button px-6 py-3 rounded-xl flex items-center gap-2 text-white bg-[#2F5D50] hover:bg-[#234D20] transition-all shadow-lg hover:shadow-[#2F5D50]/30 transform hover:-translate-y-1"
                        onclick="guardarCambios()"
                    >
                        <i class="fa-solid fa-save"></i>
                        <span class="font-semibold">Guardar Cambios</span>
                    </button>
                </div>

                <div class="flex flex-col lg:flex-row gap-8">
                    <!-- Menú lateral -->
                    <div class="lg:w-1/4 glass-panel rounded-3xl p-6 h-fit animate-fade-in-up stagger-2 border border-white/40 shadow-xl">
                        <h3 class="text-lg font-bold text-[#2F5D50] mb-4 px-2">
                            Menú
                        </h3>
                        <ul class="space-y-2">
                            <li class="p-3 bg-[#2F5D50]/10 text-[#2F5D50] font-bold rounded-xl cursor-pointer border border-[#2F5D50]/20 flex items-center transition-all">
                                <div class="w-8 h-8 rounded-lg bg-[#2F5D50]/20 flex items-center justify-center mr-3">
                                    <i class="fas fa-building"></i>
                                </div>
                                Información de la Clínica
                            </li>
                            <li class="p-3 hover:bg-white/40 text-gray-600 hover:text-[#2F5D50] rounded-xl cursor-pointer transition-all font-medium flex items-center group">
                                <div class="w-8 h-8 rounded-lg bg-gray-100 group-hover:bg-[#2F5D50]/10 flex items-center justify-center mr-3 transition-colors">
                                    <i class="fas fa-users"></i>
                                </div>
                                Usuarios y Roles
                            </li>
                            <li class="p-3 hover:bg-white/40 text-gray-600 hover:text-[#2F5D50] rounded-xl cursor-pointer transition-all font-medium flex items-center group">
                                <div class="w-8 h-8 rounded-lg bg-gray-100 group-hover:bg-[#2F5D50]/10 flex items-center justify-center mr-3 transition-colors">
                                    <i class="fas fa-cog"></i>
                                </div>
                                Preferencias
                            </li>
                            <li class="p-3 hover:bg-white/40 text-gray-600 hover:text-[#2F5D50] rounded-xl cursor-pointer transition-all font-medium flex items-center group">
                                <div class="w-8 h-8 rounded-lg bg-gray-100 group-hover:bg-[#2F5D50]/10 flex items-center justify-center mr-3 transition-colors">
                                    <i class="fas fa-receipt"></i>
                                </div>
                                Facturación
                            </li>
                            <li class="p-3 hover:bg-white/40 text-gray-600 hover:text-[#2F5D50] rounded-xl cursor-pointer transition-all font-medium flex items-center group">
                                <div class="w-8 h-8 rounded-lg bg-gray-100 group-hover:bg-[#2F5D50]/10 flex items-center justify-center mr-3 transition-colors">
                                    <i class="fas fa-bell"></i>
                                </div>
                                Notificaciones
                            </li>
                            <li class="p-3 hover:bg-white/40 text-gray-600 hover:text-[#2F5D50] rounded-xl cursor-pointer transition-all font-medium flex items-center group">
                                <div class="w-8 h-8 rounded-lg bg-gray-100 group-hover:bg-[#2F5D50]/10 flex items-center justify-center mr-3 transition-colors">
                                    <i class="fas fa-shield-alt"></i>
                                </div>
                                Seguridad
                            </li>
                        </ul>
                    </div>

                    <!-- Panel de configuración -->
                    <div class="lg:w-3/4 space-y-8 animate-fade-in-up stagger-3">
                        <!-- Información de la Clínica -->
                        {clinic && (
